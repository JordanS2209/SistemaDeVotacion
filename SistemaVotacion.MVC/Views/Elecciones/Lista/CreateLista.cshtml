@model SistemaVotacion.Modelos.Lista

@{
    ViewData["Title"] = "Crear Lista";
}

@section Styles {
    <link rel="stylesheet" href="~/css/elecciones.css" asp-append-version="true" />
}

<div class="elec-page">
    <div class="container-fluid py-3">

        <div class="mb-3">
            <h2 class="elec-title mb-1">
                <i class="bi bi-card-list"></i> @ViewData["Title"]
            </h2>
            <div class="elec-subtitle">
                Registra una lista asociada a un Proceso Electoral.
            </div>
        </div>



        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="elec-card">
                    <div class="elec-card-header">
                        <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Nueva Lista</h5>

                        <a asp-action="ListLista" class="btn elec-btn elec-btn-secondary btn-sm">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>

                    <div class="elec-card-body">
                        <form asp-action="CreateLista" method="post">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="NombreLista" class="form-label"></label>
                                <input asp-for="NombreLista"
                                       class="form-control"
                                       placeholder="Ej: Lista 6 - Renovación" />
                                <span asp-validation-for="NombreLista" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NumeroLista" class="form-label"></label>
                                <input asp-for="NumeroLista"
                                       type="number"
                                       min="1"
                                       class="form-control"
                                       placeholder="Ej: 6" />
                                <span asp-validation-for="NumeroLista" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="IdProceso" class="form-label">Proceso Electoral</label>
                                <select asp-for="IdProceso" class="form-select" asp-items="ViewBag.Procesos" required>
                                    <option value="">-- Seleccione un proceso --</option>
                                </select>
                                <span asp-validation-for="IdProceso" class="text-danger small"></span>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-3">
                                <button type="submit" class="btn elec-btn elec-btn-primary">
                                    <i class="bi bi-check-circle"></i> Crear
                                </button>
                                <a asp-action="ListLista" class="btn elec-btn elec-btn-secondary">
                                    Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
