@model SistemaVotacion.Modelos.PreguntaConsulta

@{
    ViewData["Title"] = "Crear Pregunta de Consulta";
}

<div class="container form-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card shadow border-0">
                <div class="card-header form-card-header bg-success">
                    <i class="bi bi-question-circle"></i> Crear Pregunta de Consulta
                </div>
                <div class="card-body form-card-body">
                    <form asp-action="CreatePreguntaConsulta" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="TextoPregunta" class="form-label"></label>
                            <input asp-for="TextoPregunta" class="form-control" />
                            <span asp-validation-for="TextoPregunta" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumeroPregunta" class="form-label"></label>
                            <input asp-for="NumeroPregunta" class="form-control" />
                            <span asp-validation-for="NumeroPregunta" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdProceso" class="form-label">Proceso Electoral</label>
                            <select asp-for="IdProceso" class="form-select" asp-items="ViewBag.ProcesosElectorales">
                                <option value="">-- Seleccione un proceso electoral --</option>
                            </select>
                            <span asp-validation-for="IdProceso" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-success py-2">Crear</button>
                            <a asp-action="ListPreguntaConsulta" class="btn btn-outline-secondary py-2">Volver al listado</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
