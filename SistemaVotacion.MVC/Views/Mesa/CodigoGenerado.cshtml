    @{
    ViewBag.Title = "Código generado";
}

<link rel="stylesheet" href="~/css/CodigoGenerado.css" />

<div class="codigo-container">
    <div class="codigo-card">
        <h2>Código de acceso generado</h2>

        @if (ViewBag.Codigo != null)
        {
            <p class="codigo-subtitulo">El código de acceso es:</p>
            <div class="codigo-valor">@ViewBag.Codigo</div>
        }
        else
        {
            <p class="codigo-error">No se pudo generar el código de acceso.</p>
        }

        <a asp-controller="Mesa" asp-action="Index" class="codigo-btn">
            Volver
        </a>
    </div>
</div>