@{
    ViewData["Title"] = "Panel de Geografía";
}
<br /><br /><br />
<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Administración Geográfica</h1>
        <p class="lead text-muted">Gestione la división territorial para el padrón electoral</p>
    </div>

    <div class="row g-4 justify-content-center">

        <div class="col-md-4 col-sm-6">
            <div class="card h-100 shadow-sm border-0 dashboard-card">
                <div class="card-body text-center p-4">
                    <div class="icon-box mb-3 mx-auto bg-primary bg-opacity-10 text-primary">
                        <i class="bi bi-map fs-1"></i>
                    </div>
                    <h4 class="card-title fw-bold">Gestionar Provincias</h4>
                    <p class="card-text text-muted small">Administrar las provincias del país y ver sus estadísticas.</p>
                    <a asp-action="ListProvincias" class="btn btn-primary w-100 mt-3 stretched-link">
                        Entrar a Provincias
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-6">
            <div class="card h-100 shadow-sm border-0 dashboard-card">
                <div class="card-body text-center p-4">
                    <div class="icon-box mb-3 mx-auto bg-success bg-opacity-10 text-success">
                        <i class="bi bi-building fs-1"></i>
                    </div>
                    <h4 class="card-title fw-bold">Gestionar Ciudades</h4>
                    <p class="card-text text-muted small">Administrar cantones y ciudades vinculados a cada provincia.</p>
                    <a asp-action="ListCiudades" class="btn btn-success w-100 mt-3 stretched-link">
                        Entrar a Ciudades
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-6">
            <div class="card h-100 shadow-sm border-0 dashboard-card">
                <div class="card-body text-center p-4">
                    <div class="icon-box mb-3 mx-auto bg-info bg-opacity-10 text-info">
                        <i class="bi bi-geo-alt fs-1"></i>
                    </div>
                    <h4 class="card-title fw-bold">Gestionar Parroquias</h4>
                    <p class="card-text text-muted small">Administrar parroquias urbanas y rurales y sus recintos.</p>
                    <a asp-action="ListParroquias" class="btn btn-info w-100 text-white mt-3 stretched-link">
                        Entrar a Parroquias
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

