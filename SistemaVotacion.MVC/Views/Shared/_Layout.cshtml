@{
    // Detectamos si la vista pidió esconder el sidebar (como en el Index)
    bool hideSidebar = ViewData["HideSidebar"] as bool? ?? false;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Electoral</title>

    @* Estilos Base *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/elecciones.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="@(hideSidebar ? "layout-no-sidebar" : "layout-with-sidebar")">

    @if (!hideSidebar)
    {
        <aside class="sidebar shadow" id="sidebar">
            <div class="sidebar-header">
                <div class="logo-box">
                    <i class="bi bi-shield-check fs-4"></i>
                </div>
                <div class="logo-text">
                    <h5 class="mb-0">SISTEMA ELECTORAL<br />UTN</h5>
                    <small class="text-info opacity-75" style="font-size: 0.7rem;">Gestión Académica</small>
                </div>
            </div>

            <nav class="nav-links">
                <a asp-controller="Home" asp-action="Index"
                   class="nav-item-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>

                @* MENÚ DE GESTIÓN ELECTORAL *@
                @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                {
                    <div class="mt-3 mb-2 px-3 small text-uppercase opacity-50 fw-bold" style="font-size: 0.65rem; letter-spacing: 1px;">Gestión</div>
                    
                    <a asp-controller="Elecciones" asp-action="Index" class="nav-item-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Elecciones" ? "active" : "")">
                        <i class="bi bi-ui-checks-grid"></i> Elecciones
                    </a>

                    <a asp-controller="Padrones" asp-action="Index" class="nav-item-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Padrones" ? "active" : "")">
                        <i class="bi bi-people-fill"></i> Padrón Electoral
                    </a>

                    <a asp-controller="Representantes" asp-action="Index" class="nav-item-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Representantes" ? "active" : "")">
                        <i class="bi bi-people"></i> Representantes
                    </a>

                    <a asp-controller="Infraestructura" asp-action="Index" class="nav-item-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Infraestructura" ? "active" : "")">
                        <i class="bi bi-bricks"></i> Infraestructura
                    </a>

                    <a asp-controller="Geografia" asp-action="Index" class="nav-item-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Geografia" ? "active" : "")">
                        <i class="bi bi-map"></i> Geografía
                    </a>
                }

                @* RESULTADOS *@
                <div class="mt-3 mb-2 px-3 small text-uppercase opacity-50 fw-bold" style="font-size: 0.65rem; letter-spacing: 1px;">Reportes</div>
                
                <a asp-controller="VotoDetalle" asp-action="Index" class="nav-item-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "VotoDetalle" ? "active" : "")">
                    <i class="bi bi-bar-chart-fill"></i> Resultados
                </a>
                
                <a asp-controller="Auditoria" asp-action="Index" class="nav-item-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Auditoria" ? "active" : "")">
                    <i class="bi bi-file-earmark-lock"></i> Actas de Auditoría
                </a>

                @if (User.IsInRole("SuperAdmin"))
                {
                    <div class="mt-3 mb-2 px-3 small text-uppercase opacity-50 fw-bold" style="font-size: 0.65rem; letter-spacing: 1px;">Seguridad</div>
                    <a asp-controller="Usuarios" asp-action="Index" class="nav-item-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Usuarios" ? "active" : "")">
                        <i class="bi bi-person-gear"></i> Usuarios
                    </a>
                    <a asp-controller="Creation" asp-action="ListRoles" class="nav-item-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Creation" ? "active" : "")">
                        <i class="bi bi-shield-lock"></i> Roles
                    </a>
                }
            </nav>
        </aside>
    }

    <div id="content-wrapper" class="@(hideSidebar ? "no-sidebar" : "")">
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark fixed-top navbar-custom-offset shadow-sm @(hideSidebar ? "no-sidebar" : "")">
                <div class="container-fluid px-3">
                    <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-check2-square text-primary-custom"></i> Sistema Votación
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        @* LADO IZQUIERDO: Navegación Principal *@
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white-50" asp-controller="Consultas" asp-action="Index">¿Dónde Voto?</a>
                            </li>
                        </ul>

                        @* LADO DERECHO: Login / Usuario *@
                        <ul class="navbar-nav ms-auto">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="btn btn-primary-custom btn-sm rounded-pill px-4 shadow-sm" asp-controller="Account" asp-action="Index">
                                        <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle btn btn-outline-info btn-sm rounded-pill px-3 text-white" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow border-0 bg-dark mt-2">
                                        <li><div class="dropdown-header text-info">Mi Cuenta</div></li>
                                        <li><hr class="dropdown-divider border-secondary"></li>
                                        <li>
                                            <a class="dropdown-item text-danger fw-bold" asp-controller="Account" asp-action="Logout">
                                                <i class="bi bi-power me-2"></i>Cerrar Sesión
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        @* ALERT GLOBAL: siempre arriba, debajo del navbar fixed-top *@
        <div class="container-fluid px-4 global-alert-wrapper">
            @await Html.PartialAsync("_AlertMessages")
        </div>


        <main role="main" class="pb-5">
            @if (hideSidebar)
            {
                @* Home no lleva padding extra *@
                @RenderBody()
            }
            else
            {
                <div class="container-fluid pt-4 px-4 elec-page">
                    @RenderBody()
                </div>
            }
        </main>

        <footer class="mt-auto py-3 text-center opacity-50 small border-top border-secondary">
            © 2026 - Universidad Técnica del Norte
        </footer>
    </div>

    @* Scripts *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>