@model SistemaVotacion.Modelos.ProcesoElectoral

@{
    ViewData["Title"] = "Crear Proceso Electoral";
}

<h1>Crear Proceso Electoral</h1>

<h4>Proceso Electoral</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProcesoElectoral">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NombreProceso" class="control-label"></label>
                <input asp-for="NombreProceso" class="form-control" />
                <span asp-validation-for="NombreProceso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" type="date" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" type="date" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdTipoProceso" class="control-label">Tipo de Proceso</label>
                <select asp-for="IdTipoProceso" class="form-control" asp-items="ViewBag.TipoProceso">
                    <option value="">-- Seleccione un tipo --</option>
                </select>
                <span asp-validation-for="IdTipoProceso" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListProcesoElectoral" class="btn btn-secondary mt-2">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
