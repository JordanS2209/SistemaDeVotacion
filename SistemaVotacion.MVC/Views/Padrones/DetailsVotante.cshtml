@model SistemaVotacion.Modelos.Votante

@{
    ViewData["Title"] = "DetailsVotante";
}

<div class="row justify-content-center elec-page">
    <div class="col-md-8">
        <div class="elec-card">
            <div class="elec-card-header">
                <h5 class="mb-0 text-white">
                    <i class="bi bi-person-vcard me-2"></i>Detalles del Votante
                </h5>
            </div>
            <div class="elec-card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-white-50">@Html.DisplayNameFor(model => model.Id)</dt>
                    <dd class="col-sm-8 text-white">@Html.DisplayFor(model => model.Id)</dd>

                    <dt class="col-sm-4 text-white-50">Junta Receptora</dt>
                    <dd class="col-sm-8 text-white">
                        @(Model.Junta != null ? $"Junta {Model.Junta.NumeroJunta}" : "Sin asignar")
                    </dd>

                    <dt class="col-sm-4 text-white-50">Votante (Usuario)</dt>
                    <dd class="col-sm-8 text-white">
                        @(Model.Usuario != null ? Model.Usuario.Nombres + " " + Model.Usuario.Apellidos : "Sin asignar")
                    </dd>

                    <dt class="col-sm-4 text-white-50">@Html.DisplayNameFor(model => model.Estado)</dt>
                    <dd class="col-sm-8">
                         @if (Model.Estado)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </dd>
                </dl>

                <div class="mt-4 pt-3 border-top border-secondary">
                    <a asp-action="EditVotante" asp-route-id="@Model.Id" class="btn elec-btn elec-btn-primary me-2">
                        <i class="bi bi-pencil me-1"></i>Editar
                    </a>
                    <a asp-action="ListVotantes" class="btn elec-btn elec-btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
