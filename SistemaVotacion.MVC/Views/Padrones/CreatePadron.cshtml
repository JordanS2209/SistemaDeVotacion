
@model SistemaVotacion.Modelos.Padron

@{
    ViewData["Title"] = "Habilitar Votante";
}

<div class="row justify-content-center elec-page">
    <div class="col-md-6">
        <div class="elec-card">
            <div class="elec-card-header">
                <h5 class="mb-0 text-white">
                    <i class="bi bi-person-plus me-2"></i>Habilitar Votante en Padrón
                </h5>
            </div>
            <div class="elec-card-body">
                <div class="alert elec-alert elec-alert-info mb-4">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    El código de acceso de 6 dígitos se generará automáticamente al guardar.
                </div>

                <form asp-action="CreatePadron" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert elec-alert elec-alert-danger text-danger mb-4"></div>

                    <div class="mb-4">
                        <label asp-for="IdVotante" class="form-label control-label">Seleccionar Votante</label>
                        <select asp-for="IdVotante" class="form-select" asp-items="ViewBag.Votantes">
                            <option value="">-- Buscar Votante --</option>
                        </select>
                        <span asp-validation-for="IdVotante" class="text-danger small"></span>
                        <div class="form-text">Solo aparecen votantes registrados en el sistema.</div>
                    </div>

                    <div class="alert elec-alert elec-alert-warning mb-4">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        El votante será habilitado automáticamente para el <strong>Proceso Electoral ACTIVO</strong>.
                    </div>

                    <div class="d-flex justify-content-between pt-3">
                        <a asp-action="ListPadron" class="btn elec-btn elec-btn-secondary">Cancelar</a>
                        <button type="submit" class="btn elec-btn elec-btn-success px-4">
                            <i class="bi bi-check-lg me-2"></i>Habilitar y Generar Código
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
