@model SistemaVotacion.Modelos.RecintoElectoral

@{
    ViewData["Title"] = "Eliminar Recinto";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-danger shadow-lg bg-dark text-white">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-exclamation-octagon me-2"></i>¿Eliminar este Recinto?</h4>
                </div>

                <div class="card-body text-center p-4">
                    <p class="text-white-50 lead mb-1">Está a punto de borrar permanentemente:</p>
                    <h2 class="text-primary-custom fw-bold mb-3">@Model.NombreRecinto</h2>

                    <div class="bg-secondary bg-opacity-10 rounded p-3 mb-4 text-start border border-secondary border-opacity-25">
                        <p class="mb-1 small text-uppercase fw-bold text-white-50">Ubicación Actual:</p>
                        <p class="mb-2"><i class="bi bi-geo-alt text-info me-2"></i>@(Model.Parroquia?.NombreParroquia ?? "Parroquia no asignada")</p>

                        <p class="mb-1 small text-uppercase fw-bold text-white-50">Dirección:</p>
                        <p class="mb-0 small">@Model.DireccionRecinto</p>
                    </div>

                    <div class="alert alert-dark border-warning text-warning mt-3 small">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>Atención:</strong> Si este recinto tiene <strong>Juntas Receptoras</strong> vinculadas, la eliminación podría fallar o afectar la operatividad del padrón.
                    </div>

                    <form asp-action="DeleteRecintoConfirmed" method="post" class="mt-4">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger py-2 fw-bold shadow">
                                <i class="bi bi-trash3-fill me-2"></i>Confirmar Eliminación
                            </button>
                            <a asp-action="ListRecintos" class="btn btn-outline-light py-2 border-0">
                                <i class="bi bi-x-circle me-1"></i> Cancelar y volver
                            </a>
                        </div>
                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 small border-0 shadow-sm">
                            <i class="bi bi-bug me-2"></i> @ViewBag.Error
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>