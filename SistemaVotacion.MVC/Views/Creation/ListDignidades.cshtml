@model IEnumerable<SistemaVotacion.Modelos.Dignidad>

    <br /><br /><br />
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Gestión de Dignidades</h3>
        <a asp-action="CreateDignidad" class="btn btn-success">Nueva Dignidad</a>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>NombreDignidad</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody >
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-white">@item.Id</td>
                    <td class="text-white">@item.NombreDignidad</td>
                    <td class="text-center">
                        <a asp-action="DeleteDignidad" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>