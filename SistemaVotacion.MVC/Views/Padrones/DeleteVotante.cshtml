@model SistemaVotacion.Modelos.Votante

@{
    ViewData["Title"] = "DeleteVotante";
}

<h1>DeleteVotante</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Votante</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class="col-sm-2">
            Usuario
        </dt>
        <dd class="col-sm-10">
            @if (Model.Usuario != null)
            {
                @($"{Model.Usuario.Nombres} {Model.Usuario.Apellidos}")
            }
            else
            {
                @Model.IdUsuario
            }
        </dd>

        <dt class="col-sm-2">
            Junta
        </dt>
        <dd class="col-sm-10">
            @if (Model.Junta != null)
            {
                @($"Junta {Model.Junta.NumeroJunta}")
            }
            else
            {
                @Model.IdJunta
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>

    <form asp-action="DeleteVotante" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ListVotantes" class="btn btn-secondary">Back to List</a>
    </form>
</div>
