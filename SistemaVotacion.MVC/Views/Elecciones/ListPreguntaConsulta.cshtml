@model IEnumerable<SistemaVotacion.Modelos.PreguntaConsulta>
@{
    ViewData["Title"] = "Preguntas de Consulta";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h1>Preguntas de Consulta</h1>
        <a asp-action="CreatePreguntaConsulta" class="btn btn-primary">Crear Nueva</a>
    </div>

    <div class="table-responsive card shadow-sm">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.TextoPregunta)</th>
                    <th>@Html.DisplayNameFor(model => model.NumeroPregunta)</th>
                    <th>Proceso Electoral</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.TextoPregunta</td>
                        <td>@item.NumeroPregunta</td>
                        <td>@item.ProcesosElectorales?.NombreProceso</td>
                        <td>
                            <a asp-action="EditPreguntaConsulta" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="DetailsPreguntaConsulta" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="DeletePreguntaConsulta" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
