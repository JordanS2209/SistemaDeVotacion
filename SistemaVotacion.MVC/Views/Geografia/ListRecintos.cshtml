@model IEnumerable<SistemaVotacion.Modelos.RecintoElectoral>

<div class="container mt-5 pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-white fw-bold">Gestión de Recintos</h3>
        <a asp-action="CreateRecinto" class="btn btn-primary-custom px-4 shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Nuevo Recinto
        </a>
    </div>

    <div class="table-responsive shadow-lg rounded">
        <table class="table table-dark table-hover mb-0" style="background-color: rgba(20, 29, 47, 0.5);">
            <thead class="border-bottom border-primary-custom">
                <tr class="text-primary-custom">
                    <th class="ps-4">ID</th>
                    <th>Nombre de Recinto</th>
                    <th>Detalle</th>
                    <th>Dirección</th>
                    <th>Parroquia</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody class="text-white-50">
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle">
                            <td class="ps-4">
                                <span class="badge bg-primary-custom text-dark fw-bold">@item.Id</span>
                            </td>
                            <td class="text-white fw-medium">@item.NombreRecinto</td>
                            <td>@item.DetalleRecinto</td>
                            <td>@item.DireccionRecinto</td>
                            <td>
                                <span class="text-info opacity-75">
                                    @(item.Parroquia?.NombreParroquia ?? "Sin Parroquia")
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-action="DeleteRecinto" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-danger border-0">
                                    <i class="bi bi-trash3-fill"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">
                            <i class="bi bi-exclamation-circle me-2"></i> No se cargaron datos. Verifica la conexión con la API.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>