@model IEnumerable<SistemaVotacion.Modelos.Multimedia>

@{
    ViewData["Title"] = "Lista de Multimedia";
}

<h1>Lista de Multimedia</h1>

<p>
    <a asp-action="CreateMultimedia" class="btn btn-primary">Subir nuevo multimedia</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.UrlFoto)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.IdCandidato)</th>
            <th>@Html.DisplayNameFor(model => model.IdLista)</th>
            <th>Vista previa</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    <a href="@item.UrlFoto" target="_blank">@item.UrlFoto</a>
                </td>
                <td>@item.Descripcion</td>
                <td>@item.IdCandidato</td>
                <td>@item.IdLista</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.UrlFoto))
                    {
                        <img src="@item.UrlFoto" alt="Vista previa" class="img-thumbnail" style="max-width:150px; max-height:150px;" />
                    }
                </td>
                <td>
                    <a asp-action="EditMultimedia" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="DetailsMultimedia" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="DeleteMultimedia" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
