@model SistemaVotacion.Modelos.Lista

@{
    ViewData["Title"] = "DeleteLista";
}

<h1>DeleteLista</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Lista</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreLista)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreLista)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroLista)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroLista)
        </dd>

        <dt class="col-sm-2">
            Proceso Electoral
        </dt>
        <dd class="col-sm-10">
            @Model.Proceso?.NombreProceso ?? "No asignado"
        </dd>
    </dl>

    <form asp-action="DeleteLista" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ListLista" class="btn btn-secondary">Back to List</a>
    </form>
</div>
