@model IEnumerable<SistemaVotacion.Modelos.JuntaReceptora>

@{
    ViewData["Title"] = "Gestión de Juntas";
}

<div class="container mt-5 pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-white fw-bold">Gestión de Juntas Receptoras</h3>
        <a asp-action="CreateJuntas" class="btn btn-primary-custom px-4 shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Nueva Junta
        </a>
    </div>

    <div class="table-responsive shadow-lg rounded">
        <table class="table table-dark table-hover mb-0" style="background-color: rgba(20, 29, 47, 0.5);">
            <thead class="border-bottom border-primary-custom">
                <tr class="text-primary-custom">
                    <th class="ps-4">ID</th>
                    <th class="text-center">Número de Junta</th>
                    <th>Género</th>
                    <th>Recinto Electoral</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody class="text-white-50">
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle">
                            <td class="ps-4">
                                <span class="fw-bold text-white fs-5">@item.Id</span>
                            </td>
                            <td class="text-center">
                                <span class="fw-bold text-white fs-5"># @item.NumeroJunta</span>
                            </td>
                            <td>
                                <span class="text-info opacity-75">
                                    @(item.Genero?.DetalleGenero ?? "Sin Genero")
                                </span>
                            </td>
                            <td>
                                <span class="text-info opacity-75">
                                    @(item.Recintos?.NombreRecinto ?? "Sin Recinto")
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group shadow-sm">
                                    <a asp-action="DeleteJunta" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger px-3 border-0">
                                        <i class="bi bi-trash3-fill"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <i class="bi bi-info-circle me-2"></i> No se encontraron juntas receptoras configuradas.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>