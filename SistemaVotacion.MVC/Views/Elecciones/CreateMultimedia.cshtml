@model SistemaVotacion.Modelos.Multimedia

@{
    ViewData["Title"] = "Crear Multimedia";
}

<div class="container form-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card shadow border-0">
                <div class="card-header form-card-header bg-success">
                    <i class="bi bi-file-earmark-plus"></i> Subir Multimedia
                </div>
                <div class="card-body form-card-body">
                    <form asp-action="CreateMultimedia" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label for="file" class="form-label">Archivo</label>
                            <input type="file" name="file" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <input asp-for="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdCandidato" class="form-label">Candidato</label>
                            <select asp-for="IdCandidato" class="form-select" asp-items="ViewBag.Candidatos">
                                <option value="">-- Seleccionar candidato --</option>
                            </select>
                            <span asp-validation-for="IdCandidato" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdLista" class="form-label">Lista</label>
                            <select asp-for="IdLista" class="form-select" asp-items="ViewBag.Listas">
                                <option value="">-- Seleccionar lista --</option>
                            </select>
                            <span asp-validation-for="IdLista" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-success py-2">
                                <i class="bi bi-upload"></i> Subir
                            </button>
                            <a asp-action="ListMultimedia" class="btn btn-outline-secondary py-2">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
