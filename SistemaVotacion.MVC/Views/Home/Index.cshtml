@{
    ViewData["Title"] = "Inicio - Sistema de Votación";
    // Solo ocultar sidebar si NO está autenticado
    ViewData["HideSidebar"] = !User.Identity.IsAuthenticated;
}

<main role="main">
    <div id="myCarousel" class="carousel slide shadow-lg" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/CuentaBloqueada1.jpg" alt="Soporte">
                <div class="container">
                    <div class="carousel-caption text-start">
                        <h1 class="display-3 fw-bold">¿Cuenta Bloqueada?</h1>
                        <p class="lead">Contáctanos por WhatsApp para soporte inmediato.</p>
                        <p><a class="btn btn-lg btn-success rounded-pill px-4 shadow" href="https://w.app/cr8lfr" target="_blank"><i class="bi bi-whatsapp"></i> Chatear ahora</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/Banner1.jpg" alt="Electoral">
                <div class="container">
                    <div class="carousel-caption">
                        <h1 class="display-3 fw-bold">Elecciones 2026</h1>
                        <p class="lead">Asegúrate de conocer todos los detalles de este proceso.</p>
                        <p><a class="btn btn-lg btn-primary shadow" asp-controller="Home" asp-action="Privacy">Ver Información</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container marketing">

        @if (ViewBag.ProcesoActivo == true)
        {
            <div class="row mb-5 text-center">
                <div class="col-12">
                    <div class="card shadow-lg border-0 bg-primary bg-gradient text-white rounded-5 overflow-hidden">
                        <div class="card-body p-5">
                            <h2 class="display-4 fw-bold mb-3"><i class="bi bi-box-seam me-2"></i>¡Las Votaciones están Abiertas!</h2>
                            <p class="lead mb-4">El proceso electoral se encuentra activo. Ejerce tu derecho al voto de manera rápida y segura.</p>
                            <a asp-controller="Acceso" asp-action="IngresarCodigo" class="btn btn-light btn-lg rounded-pill px-5 py-3 fw-bold shadow-sm custom-hover-effect">
                                <i class="bi bi-hand-index-thumb me-2"></i>Votar Ahora
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        <div class="row">
            <div class="col-lg-3">
                <div class="bg-dark p-4 rounded-circle mx-auto mb-3 shadow-sm d-flex align-items-center justify-content-center" style="width: 140px; height: 140px;">
                    <i class="bi bi-clipboard-data fs-1 text-primary-custom"></i>
                </div>
                <h2>Resultados</h2>
                <p><a class="btn btn-secondary" asp-controller="VotoDetalle" asp-action="Index">Ver Detalles »</a></p>
            </div>

            <div class="col-lg-3">
                <div class="bg-dark p-4 rounded-circle mx-auto mb-3 shadow-sm d-flex align-items-center justify-content-center" style="width: 140px; height: 140px;">
                    <i class="bi bi-people-fill fs-1 text-primary-custom"></i>
                </div>
                <h2>Padrón</h2>
                <p><a class="btn btn-secondary" asp-controller="Padrones" asp-action="ListPadron">Gestionar »</a></p>
            </div>
            <div class="col-lg-3">
                <div class="bg-dark p-4 rounded-circle mx-auto mb-3 shadow-sm d-flex align-items-center justify-content-center" style="width: 140px; height: 140px;">
                    <i class="bi bi-ui-checks-grid fs-1 text-primary-custom"></i>
                </div>
                <h2>Mesas</h2>
                <p><a class="btn btn-secondary" asp-controller="Mesa" asp-action="ListJunta">Ir a Mesas »</a></p>
            </div>
            <div class="col-lg-3">
                <div class="bg-dark p-4 rounded-circle mx-auto mb-3 shadow-sm d-flex align-items-center justify-content-center" style="width: 140px; height: 140px;">
                    <i class="bi bi-file-earmark-check fs-1 text-primary-custom"></i>
                </div>
                <h2>Elecciones</h2>
                <p><a class="btn btn-secondary" asp-controller="Elecciones" asp-action="Index">Configurar »</a></p>

            </div>
        </div>

        <hr class="featurette-divider">
        <div class="row featurette align-items-center">
            <div class="col-md-7">
                <h2 class="featurette-heading display-4 fw-bold">Seguridad en tu <span class="text-primary-custom">Voto Digital</span></h2>
                <p class="lead opacity-75">Encriptación de extremo a extremo para asegurar tu privacidad.</p>
            </div>
            <div class="col-md-5">
                <img src="~/img/Banner.jpg" class="featurette-image img-fluid mx-auto rounded shadow-lg" style="width: 500px; height: 350px; object-fit: cover;">
            </div>
        </div>

        <hr class="featurette-divider">
        <div class="row featurette align-items-center">
            <div class="col-md-7 order-md-2">
                <h2 class="featurette-heading display-4 fw-bold">Transparencia <span class="text-primary-custom">Total</span></h2>
                <p class="lead opacity-75">Monitoreo en tiempo real de la participación ciudadana.</p>
            </div>
            <div class="col-md-5 order-md-1">
                <img src="~/img/Banner.jpg" class="featurette-image img-fluid mx-auto rounded shadow-lg" style="width: 500px; height: 350px; object-fit: cover;">
            </div>
        </div>
        <hr class="featurette-divider">
    </div>
</main>