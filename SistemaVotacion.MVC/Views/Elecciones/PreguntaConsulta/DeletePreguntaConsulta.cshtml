@model SistemaVotacion.Modelos.PreguntaConsulta


<div class="row justify-content-center elec-page">
    <div class="col-md-6">
        <div class="elec-card border-danger">
            <div class="elec-card-header bg-danger bg-opacity-25">
                <h5 class="mb-0 text-white">
                    <i class="bi bi-trash me-2"></i>Eliminar Pregunta de Consulta
                </h5>
            </div>
            <div class="elec-card-body text-center">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                    <h3 class="text-danger fw-bold mt-2">¿Estás seguro?</h3>
                    <p class="text-muted">Esta acción eliminará la pregunta del sistema.</p>
                </div>
                
                <div class="bg-dark bg-opacity-25 rounded p-3 mb-4 text-start border border-secondary">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-white-50">ID</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Id</dd>

                        <dt class="col-sm-4 text-white-50">Número</dt>
                        <dd class="col-sm-8 text-white">@Model.NumeroPregunta</dd>

                        <dt class="col-sm-4 text-white-50">Pregunta</dt>
                        <dd class="col-sm-8 text-white">@Model.TextoPregunta</dd>

                        <dt class="col-sm-4 text-white-50">Proceso</dt>
                        <dd class="col-sm-8 text-white">@(Model.ProcesosElectorales?.NombreProceso ?? "No asignado")</dd>
                    </dl>
                </div>
                
                <form asp-action="DeletePreguntaConsulta" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="ListPreguntaConsulta" class="btn elec-btn elec-btn-secondary">Cancelar</a>
                        <button type="submit" class="btn elec-btn elec-btn-danger px-4">Confirmar Eliminación</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
