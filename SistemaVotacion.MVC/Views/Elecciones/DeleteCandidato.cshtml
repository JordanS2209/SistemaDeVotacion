@model SistemaVotacion.Modelos.Candidato

<div class="container form-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card shadow border-0">
                <div class="card-header form-card-header bg-danger text-white text-center">
                    <i class="bi bi-trash"></i> Eliminar Candidato
                </div>
                <div class="card-body form-card-body">
                    <h5 class="text-center mb-3">¿Estás seguro que deseas eliminar este registro?</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Nombre Candidato</dt>
                        <dd class="col-sm-8">@Model.NombreCandidato</dd>

                        <dt class="col-sm-4">Lista</dt>
                        <dd class="col-sm-8">@Model.Lista?.NombreLista ?? "No asignada"</dd>

                        <dt class="col-sm-4">Dignidad</dt>
                        <dd class="col-sm-8">@Model.Dignidad?.NombreDignidad ?? "No asignada"</dd>
                    </dl>

                    <form asp-action="DeleteCandidato" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-danger py-2">Eliminar</button>
                            <a asp-action="ListCandidato" class="btn btn-secondary py-2">Volver a la lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
