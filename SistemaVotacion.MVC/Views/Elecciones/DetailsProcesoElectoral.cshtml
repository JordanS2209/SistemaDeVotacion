@model SistemaVotacion.Modelos.ProcesoElectoral

@{
    ViewData["Title"] = "DetailsProcesoElectoral";
}

<h1>Detalles del Proceso Electoral</h1>

<div>
    <h4>Proceso Electoral</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Id)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NombreProceso)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NombreProceso)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaInicio)</dt>
        <dd class="col-sm-10">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaFin)</dt>
        <dd class="col-sm-10">@Model.FechaFin.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Tipo de Proceso</dt>
        <dd class="col-sm-10">
            @(Model.TipoProceso != null ? Model.TipoProceso.NombreTipoProceso : "No definido")
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Editar", "EditProcesoElectoral", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Volver a la Lista", "ListProcesoElectoral", null, new { @class = "btn btn-secondary" })
</div>
