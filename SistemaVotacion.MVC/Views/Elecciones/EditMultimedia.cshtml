@model SistemaVotacion.Modelos.Multimedia
@{
    ViewData["Title"] = "Editar Multimedia";
}

<div class="container form-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card shadow border-0">
                <div class="card-header form-card-header bg-warning text-white text-center">
                    <i class="bi bi-image"></i> Editar Multimedia
                </div>
                <div class="card-body form-card-body">
                    <form asp-action="EditMultimedia" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <input asp-for="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdCandidato" class="form-label"></label>
                            <select asp-for="IdCandidato" class="form-control" asp-items="@(new SelectList(ViewBag.Candidatos, "Value", "Text", Model.IdCandidato))">
                                <option value="">-- Seleccione un candidato --</option>
                            </select>
                            <span asp-validation-for="IdCandidato" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdLista" class="form-label"></label>
                            <select asp-for="IdLista" class="form-control" asp-items="@(new SelectList(ViewBag.Listas, "Value", "Text", Model.IdLista))">
                                <option value="">-- Seleccione una lista --</option>
                            </select>
                            <span asp-validation-for="IdLista" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <input type="submit" value="Guardar" class="btn btn-primary py-2" />
                            <a asp-action="ListMultimedia" class="btn btn-secondary py-2">Cancelar</a>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.UrlFoto))
                    {
                        <hr />
                        <h6>Imagen actual:</h6>
                        <img src="@Model.UrlFoto" alt="Vista previa" class="img-thumbnail" style="max-width:300px; max-height:300px;" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>
