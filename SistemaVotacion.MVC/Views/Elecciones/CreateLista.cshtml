@model SistemaVotacion.Modelos.Lista

@{
    ViewData["Title"] = "Crear Lista";
}

<div class="container form-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card shadow border-0">
                <div class="card-header form-card-header bg-primary">
                    <i class="bi bi-card-list"></i> Crear Lista
                </div>
                <div class="card-body form-card-body">
                    <form asp-action="CreateLista" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="NombreLista" class="form-label"></label>
                            <input asp-for="NombreLista" class="form-control" />
                            <span asp-validation-for="NombreLista" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumeroLista" class="form-label"></label>
                            <input asp-for="NumeroLista" class="form-control" />
                            <span asp-validation-for="NumeroLista" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdProceso" class="form-label">Proceso Electoral</label>
                            <select asp-for="IdProceso" class="form-select" asp-items="ViewBag.Procesos">
                                <option value="">-- Seleccione un proceso --</option>
                            </select>
                            <span asp-validation-for="IdProceso" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-primary py-2">
                                <i class="bi bi-save"></i> Crear
                            </button>
                            <a asp-action="ListLista" class="btn btn-outline-secondary py-2">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
