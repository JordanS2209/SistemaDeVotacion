
@model SistemaVotacion.Modelos.Padron

@{
    ViewData["Title"] = "Editar Padrón";
}

<div class="row justify-content-center elec-page">
    <div class="col-md-6">
        <div class="elec-card">
            <div class="elec-card-header">
                <h5 class="mb-0 text-white">
                    <i class="bi bi-pencil-square me-2"></i>Editar Registro de Padrón
                </h5>
            </div>
            <div class="elec-card-body">
                <form asp-action="EditPadron" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert elec-alert elec-alert-danger text-danger mb-4"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label asp-for="IdVotante" class="form-label control-label">Votante</label>
                        <select asp-for="IdVotante" class="form-select" asp-items="ViewBag.Votantes"></select>
                        <span asp-validation-for="IdVotante" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="IdProceso" class="form-label control-label">Proceso Electoral</label>
                        <select asp-for="IdProceso" class="form-select" asp-items="ViewBag.Procesos"></select>
                        <span asp-validation-for="IdProceso" class="text-danger small"></span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="CodigoAcceso" class="form-label control-label">Código de Acceso</label>
                            <input asp-for="CodigoAcceso" class="form-control fw-bold text-center" />
                            <span asp-validation-for="CodigoAcceso" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label control-label d-block">Estado</label>
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" asp-for="HaVotado" id="haVotadoCheck">
                                <label class="form-check-label" for="haVotadoCheck">Ya Votó</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between pt-3">
                        <a asp-action="ListPadron" class="btn elec-btn elec-btn-secondary">Cancelar</a>
                        <input type="submit" value="Guardar Cambios" class="btn elec-btn elec-btn-primary px-4" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
