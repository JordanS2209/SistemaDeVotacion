@model SistemaVotacion.Modelos.Candidato

@{
    ViewData["Title"] = "Detalles Candidato";
}

<div class="container form-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card shadow border-0">
                <div class="card-header form-card-header bg-info text-white text-center">
                    <i class="bi bi-person-badge"></i> Detalles del Candidato
                </div>
                <div class="card-body form-card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.NombreCandidato</dd>

                        <dt class="col-sm-4">Lista</dt>
                        <dd class="col-sm-8">
                            @(Model.Lista != null ? Model.Lista.NombreLista : "No asignada")
                        </dd>

                        <dt class="col-sm-4">Dignidad</dt>
                        <dd class="col-sm-8">
                            @(Model.Dignidad != null ? Model.Dignidad.NombreDignidad : "No asignada")
                        </dd>
                    </dl>

                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="EditCandidato" asp-route-id="@Model.Id" class="btn btn-warning py-2">
                            Editar
                        </a>
                        <a asp-action="ListCandidato" class="btn btn-secondary py-2">
                            Volver a la lista
                        </a>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 small">
                            @ViewBag.Error
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
