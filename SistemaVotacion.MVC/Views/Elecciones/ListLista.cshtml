@model IEnumerable<SistemaVotacion.Modelos.Lista>
@{
    ViewData["Title"] = "Lista de Listas";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h1>Lista de Listas</h1>
        <a asp-action="CreateLista" class="btn btn-primary">Crear nueva lista</a>
    </div>

    <div class="table-responsive card shadow-sm">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.NombreLista)</th>
                    <th>@Html.DisplayNameFor(model => model.NumeroLista)</th>
                    <th>Proceso Electoral</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.NombreLista</td>
                        <td>@item.NumeroLista</td>
                        <td>@item.Proceso?.NombreProceso</td>
                        <td>
                            <a asp-action="EditLista" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="DetailsLista" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="DeleteLista" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
