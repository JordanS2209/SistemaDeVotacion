@model IEnumerable<SistemaVotacion.Modelos.UsuarioListDto>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<div class="container form-container">
    <div class="card form-card">
        <div class="form-card-header bg-info">
            <i class="bi bi-people-fill"></i>
            Listado de Usuarios
        </div>

        <div class="form-card-body">

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }

            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Nombres</td>
                            <td>@item.Apellidos</td>
                            <td>@item.Email</td>
                            <td>
                                <span class="badge bg-secondary">
                                    @item.Rol
                                </span>
                            </td>
                            <td>
                                @if (item.CuentaBloqueada.GetValueOrDefault())

                                {
                                    <span class="badge bg-danger">Bloqueada</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Activa</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="EditUsuario"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>

                                <a asp-action="DeleteUsuario"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
