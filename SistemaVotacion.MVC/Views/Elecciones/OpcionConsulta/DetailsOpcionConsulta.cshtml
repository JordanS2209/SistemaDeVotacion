@model SistemaVotacion.Modelos.OpcionConsulta

@{
    ViewData["Title"] = "Detalles de Opción de Consulta";
}

<div class="container form-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card shadow border-0">
                <div class="card-header form-card-header bg-info text-white text-center">
                    <i class="bi bi-list-check"></i> Detalles de Opción de Consulta
                </div>
                <div class="card-body form-card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Texto de Opción</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TextoOpcion)</dd>

                        <dt class="col-sm-4">Pregunta Asociada</dt>
                        <dd class="col-sm-8">
                            @(Model.Pregunta != null ? Model.Pregunta.TextoPregunta : "Pregunta no disponible")
                        </dd>
                    </dl>

                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="EditOpcionConsulta" asp-route-id="@Model.Id" class="btn btn-warning py-2">
                            Editar
                        </a>
                        <a asp-action="ListOpcionConsulta" class="btn btn-secondary py-2">
                            Volver al listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
