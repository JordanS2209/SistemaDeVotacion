@model IEnumerable<SistemaVotacion.Modelos.Rol>

<style>
    body {
        background-color: #1b263b; 
        color: white; 
    }

    .table {
        color: white;
    }
</style>

<br /><br /><br />
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">Gestión de Roles</h3>
        <a asp-action="CreateRol" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Nuevo Rol
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody class="bg-light bg-opacity-10">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.Id</td>
                        <td>@item.NombreRol</td>
                        <td>@item.DescripcionRol</td>
                        <td class="text-center">
                            <a asp-action="DeleteRol" asp-route-id="@item.Id" class="btn btn-sm btn-danger shadow-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>