@model SistemaVotacion.Modelos.Multimedia

<div class="container form-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card shadow border-0">
                <div class="card-header form-card-header bg-danger text-white text-center">
                    <i class="bi bi-trash"></i> Eliminar Multimedia
                </div>
                <div class="card-body form-card-body">
                    <h5 class="text-center mb-3">¿Estás seguro de que deseas eliminar este registro?</h5>
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Archivo</dt>
                        <dd class="col-sm-8">
                            @Model.UrlFoto
                            @if (!string.IsNullOrEmpty(Model.UrlFoto))
                            {
                                <div class="mt-2">
                                    <img src="@Model.UrlFoto" class="img-thumbnail" style="max-width:300px; max-height:300px;" />
                                </div>
                            }
                        </dd>

                        <dt class="col-sm-4">Descripción</dt>
                        <dd class="col-sm-8">@Model.Descripcion</dd>

                        <dt class="col-sm-4">Candidato</dt>
                        <dd class="col-sm-8">@Model.Candidato?.NombreCandidato ?? "No asignado"</dd>

                        <dt class="col-sm-4">Lista</dt>
                        <dd class="col-sm-8">@Model.Lista?.NombreLista ?? "No asignada"</dd>
                    </dl>

                    <form asp-action="DeleteMultimedia" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-danger py-2">Eliminar</button>
                            <a asp-action="ListMultimedia" class="btn btn-secondary py-2">Volver a la lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
