@model SistemaVotacion.Modelos.Multimedia

@{
    ViewData["Title"] = "Crear Multimedia";
}

<div class="elec-page">
    <div class="container-fluid py-3">

        <div class="mb-3">
            <h2 class="elec-title mb-1">
                <i class="bi bi-file-earmark-plus"></i> @ViewData["Title"]
            </h2>
            <div class="elec-subtitle">
                Sube un archivo y asígnalo a un Candidato o a una Lista (solo uno).
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="elec-card">
                    <div class="elec-card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-cloud-arrow-up"></i> Subir Multimedia
                        </h5>

                        <a asp-action="ListMultimedia" class="btn elec-btn elec-btn-secondary btn-sm">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>

                    <div class="elec-card-body">
                        <form asp-action="CreateMultimedia" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label for="file" class="form-label">Archivo</label>
                                <input type="file" name="file" class="form-control" required />
                                <div class="form-text text-white-50 mt-1">
                                    Selecciona una imagen/archivo válido según tu configuración.
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Descripcion" class="form-label"></label>
                                <input asp-for="Descripcion" class="form-control" placeholder="Ej: Foto oficial del candidato" />
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>

                            <hr class="elec-hr my-4" />

                            <div class="elec-alert mb-3">
                                <i class="bi bi-info-circle"></i>
                                Debes seleccionar <strong>solo uno</strong>: Candidato o Lista.
                            </div>

                            <div class="mb-3">
                                <label asp-for="IdCandidato" class="form-label">Candidato</label>
                                <select asp-for="IdCandidato" class="form-select" asp-items="ViewBag.Candidatos">
                                    <option value="">-- Seleccionar candidato --</option>
                                </select>
                                <span asp-validation-for="IdCandidato" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="IdLista" class="form-label">Lista</label>
                                <select asp-for="IdLista" class="form-select" asp-items="ViewBag.Listas">
                                    <option value="">-- Seleccionar lista --</option>
                                </select>
                                <span asp-validation-for="IdLista" class="text-danger small"></span>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-3">
                                <button type="submit" class="btn elec-btn elec-btn-primary">
                                    <i class="bi bi-upload"></i> Subir
                                </button>

                                <a asp-action="ListMultimedia" class="btn elec-btn elec-btn-secondary">
                                    Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
