
@model IEnumerable<SistemaVotacion.Modelos.JuntaReceptora>

@{
    ViewData["Title"] = "Juntas Receptoras";
}

<div class="elec-page container-fluid">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="elec-title mb-0">
                <i class="bi bi-ui-checks-grid me-2"></i>Juntas Receptoras del Voto
            </h1>
            <p class="text-muted mt-2">Administración de las mesas donde los votantes están asignados.</p>
        </div>
        <div class="col-auto">
            <a asp-action="CreateJunta" class="btn elec-btn elec-btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Nueva Junta
            </a>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert elec-alert elec-alert-danger mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.Error
        </div>
    }

    <div class="elec-card">
        <div class="elec-card-body p-0">
            <div class="elec-table-wrap">
                <table class="table elec-table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Recinto Electoral</th>
                            <th>Número de Junta</th>
                            <th>Género Asignado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    @if(item.Recintos != null)
                                    {
                                        <span class="fw-bold">@item.Recintos.NombreRecinto</span>
                                        <div class="small text-muted">@item.Recintos.DireccionRecinto</div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Recinto #@item.IdRecinto</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary fs-6">Junta @item.NumeroJunta</span>
                                </td>
                                <td>
                                    @if(item.Genero != null)
                                    {
                                        @item.Genero.DetalleGenero
                                    }
                                    else
                                    {
                                        @item.IdGenero
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="EditJunta" asp-route-id="@item.Id" class="btn elec-btn-sm elec-btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="DeleteJunta" asp-route-id="@item.Id" class="btn elec-btn-sm elec-btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-layout-text-window-reverse fs-1 d-block mb-3"></i>
                    <p class="mb-0">No hay juntas registradas.</p>
                </div>
            }
        </div>
    </div>
</div>
