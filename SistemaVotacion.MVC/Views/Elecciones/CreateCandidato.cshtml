@model SistemaVotacion.Modelos.Candidato

@{
    ViewData["Title"] = "Crear Candidato";
}

<h1>Crear Candidato</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateCandidato" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NombreCandidato"></label>
                <input asp-for="NombreCandidato" class="form-control" />
                <span asp-validation-for="NombreCandidato" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdLista">Lista</label>
                <select asp-for="IdLista" class="form-control" asp-items="ViewBag.Listas"></select>
                <span asp-validation-for="IdLista" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdDignidad">Dignidad</label>
                <select asp-for="IdDignidad" class="form-control" asp-items="ViewBag.Dignidades"></select>
                <span asp-validation-for="IdDignidad" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="ListCandidato" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
