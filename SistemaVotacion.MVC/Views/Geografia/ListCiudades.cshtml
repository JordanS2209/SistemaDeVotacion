@model IEnumerable<SistemaVotacion.Modelos.Ciudad>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Gestión de Ciudades</h3>
        <a asp-action="CreateCiudad" class="btn btn-success">Nueva Ciudad</a>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre de Ciudad</th>
                <th>Provincia</th>
                <th class="text-center">Nro. Parroquias</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.NombreCiudad</td>
                        <td>
                            @(item.Provincia?.NombreProvincia ?? "Sin Provincia")
                        </td>
                        <td class="text-center">
                            <span class="badge bg-success">
                                @(item.Parroquias?.Count ?? 0)
                            </span>
                        </td>
                        <td class="text-center">
                            <a asp-action="DeleteCiudad" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>