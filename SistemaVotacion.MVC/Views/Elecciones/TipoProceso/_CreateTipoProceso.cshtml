@model SistemaVotacion.Modelos.TipoProceso

<form asp-action="CreateTipoProceso" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="NombreTipoProceso" class="form-label"></label>
        <input asp-for="NombreTipoProceso" class="form-control" />
        <span asp-validation-for="NombreTipoProceso" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger small"></span>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-3">
        <button type="button" class="btn elec-btn elec-btn-secondary" data-bs-dismiss="modal">
            Cancelar
        </button>
        <button type="submit" class="btn elec-btn-primary">
            <i class="bi bi-plus-circle"></i> Crear
        </button>
    </div>
</form>
