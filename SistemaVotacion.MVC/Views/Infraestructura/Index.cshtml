@{
    ViewData["Title"] = "Panel de Infraestructura";
}
<br /><br /><br />
<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Infraestructura Electoral</h1>
        <p class="lead text-muted">Gestione los lugares y mesas de votación</p>
    </div>

    <div class="row g-4 justify-content-center">

        <div class="col-md-4 col-sm-6">
            <div class="card h-100 shadow-sm border-0 dashboard-card">
                <div class="card-body text-center p-4">
                    <div class="icon-box mb-3 mx-auto bg-primary bg-opacity-10 text-primary">
                        <i class="bi bi-building fs-1"></i>
                    </div>
                    <h4 class="card-title fw-bold">Recintos Electorales</h4>
                    <p class="card-text text-muted small">Administrar los lugares físicos donde se realizará la votación.</p>
                    <a asp-controller="RecintosElectorales" asp-action="Index" class="btn btn-primary w-100 mt-3 stretched-link">
                        Gestión de Recintos
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-6">
            <div class="card h-100 shadow-sm border-0 dashboard-card">
                <div class="card-body text-center p-4">
                    <div class="icon-box mb-3 mx-auto bg-success bg-opacity-10 text-success">
                        <i class="bi bi-box-seam fs-1"></i>
                    </div>
                    <h4 class="card-title fw-bold">Juntas Receptoras</h4>
                    <p class="card-text text-muted small">Administrar las mesas de votación (Juntas) y sus miembros.</p>
                    <a asp-controller="Mesa" asp-action="ListJunta" class="btn btn-success w-100 mt-3 stretched-link">
                        Gestión de Juntas
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
