@model SistemaVotacion.Modelos.TipoVoto

@{
    ViewData["Title"] = "Editar Tipo de Voto";
}


<div class="row justify-content-center elec-page">
    <div class="col-md-6">
        <div class="elec-card">
            <div class="elec-card-header">
                <h5 class="mb-0 text-white">Editar Tipo de Voto</h5>
            </div>
            <div class="elec-card-body">
                <form asp-action="EditTipoVoto">
                    <div asp-validation-summary="ModelOnly" class="alert elec-alert elec-alert-danger text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label asp-for="NombreTipo" class="form-label control-label">Nombre del Tipo de Voto</label>
                        <input asp-for="NombreTipo" class="form-control" />
                        <span asp-validation-for="NombreTipo" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between pt-2">
                        <a asp-action="ListTipoVoto" class="btn elec-btn elec-btn-secondary">Cancelar</a>
                        <input type="submit" value="Guardar Cambios" class="btn elec-btn elec-btn-primary px-4" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
