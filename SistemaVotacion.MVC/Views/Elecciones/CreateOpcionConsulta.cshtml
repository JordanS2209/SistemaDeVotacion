@model SistemaVotacion.Modelos.OpcionConsulta

@{
    ViewData["Title"] = "Crear Opción de Consulta";
}

<div class="container form-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card shadow border-0">
                <div class="card-header form-card-header bg-primary">
                    <i class="bi bi-list-check"></i> Crear Opción de Consulta
                </div>
                <div class="card-body form-card-body">
                    <form asp-action="CreateOpcionConsulta" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="TextoOpcion" class="form-label"></label>
                            <input asp-for="TextoOpcion" class="form-control" />
                            <span asp-validation-for="TextoOpcion" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdPregunta" class="form-label">Pregunta</label>
                            <select asp-for="IdPregunta" class="form-select" asp-items="ViewBag.Preguntas">
                                <option value="">-- Seleccione una pregunta --</option>
                            </select>
                            <span asp-validation-for="IdPregunta" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-primary py-2">Crear</button>
                            <a asp-action="ListOpcionConsulta" class="btn btn-outline-secondary py-2">Volver al listado</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
