@model SistemaVotacion.Modelos.Lista
@{
    ViewData["Title"] = "Editar Lista";
}

<div class="container form-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card shadow border-0">
                <div class="card-header form-card-header bg-warning text-white text-center">
                    <i class="bi bi-list-check"></i> Editar Lista
                </div>
                <div class="card-body form-card-body">
                    <form asp-action="EditLista">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Id" class="form-label"></label>
                            <input asp-for="Id" class="form-control" readonly />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NombreLista" class="form-label"></label>
                            <input asp-for="NombreLista" class="form-control" />
                            <span asp-validation-for="NombreLista" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumeroLista" class="form-label"></label>
                            <input asp-for="NumeroLista" class="form-control" />
                            <span asp-validation-for="NumeroLista" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdProceso" class="form-label">Proceso Electoral</label>
                            <select asp-for="IdProceso" class="form-control" asp-items="ViewBag.Procesos">
                                <option value="">-- Seleccione un proceso --</option>
                            </select>
                            <span asp-validation-for="IdProceso" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <input type="submit" value="Guardar" class="btn btn-primary py-2" />
                            <a asp-action="ListLista" class="btn btn-secondary py-2">Volver a la lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
