@model IEnumerable<SistemaVotacion.Modelos.Votante>

@{
    ViewData["Title"] = "ListVotantes";
}

<div class="elec-page container-fluid">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="elec-title mb-0">
                <i class="bi bi-person-vcard-fill me-2"></i>Listado de Votantes
            </h1>
            <p class="text-muted mt-2">Gestión de votantes registrados.</p>
        </div>
        <div class="col-auto">
            <a asp-action="CreateVotante" class="btn elec-btn elec-btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Nuevo Votante
            </a>
        </div>
    </div>

    <div class="elec-card">
        <div class="elec-card-body p-0">
            <div class="elec-table-wrap">
                <table class="table elec-table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>Junta Receptora</th>
                            <th>Votante (Usuario)</th>
                            <th>Estado (Activo)</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@(item.Junta != null ? $"Junta {item.Junta.NumeroJunta}" : "Sin asignar")</td>
                                <td>@(item.Usuario != null ? item.Usuario.Nombres + " " + item.Usuario.Apellidos : "Sin asignar")</td>
                                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="EditVotante" asp-route-id="@item.Id" class="btn elec-btn-sm elec-btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="DetailsVotante" asp-route-id="@item.Id" class="btn elec-btn-sm elec-btn-outline-info" title="Detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="DeleteVotante" asp-route-id="@item.Id" class="btn elec-btn-sm elec-btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                    <p class="mb-0">No hay votantes registrados.</p>
                </div>
            }
        </div>
    </div>
</div>
