}

<h2>Mesa - Buscar votante</h2>

<form asp-controller="Mesa" asp-action="BuscarVotante" method="post" class="mesa-form-hero">
    <div class="form-group">
        <label for="numeroIdentificacion">Cédula</label>
        <input type="text" class="form-control mesa-input" id="numeroIdentificacion" name="numeroIdentificacion" placeholder="Cédula" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2 mesa-btn">Buscar</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.Error
    </div>
}
@if (ViewBag.YaVoto == true)
{
    <div class="alert alert-warning mt-3">
        <strong>⚠️ Usuario ya votó</strong><br />
        Este ciudadano ya ejerció su derecho al voto y no puede votar nuevamente.
    </div>
}

@if (padronId.HasValue)
{
    <form asp-controller="Mesa" asp-action="Habilitar" method="post" class="mt-3">
        <input type="hidden" name="padronId" value="@padronId.Value" />
        <button type="submit" class="btn btn-success">Habilitar</button>
    </form>
}