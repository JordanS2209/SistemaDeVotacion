@model SistemaVotacion.Modelos.Multimedia
@{
    ViewData["Title"] = "Editar Multimedia";
}

<div class="elec-page">
    <div class="container-fluid py-3">

        <div class="mb-3">
            <h2 class="elec-title mb-1">
                <i class="bi bi-image"></i> @ViewData["Title"]
            </h2>
            <div class="elec-subtitle">
                Actualiza la descripción y la asociación (Candidato o Lista).
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="elec-card">
                    <div class="elec-card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-pencil-square"></i> Editar
                        </h5>

                        <a asp-action="ListMultimedia" class="btn elec-btn elec-btn-secondary btn-sm">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>

                    <div class="elec-card-body">

                        <form asp-action="EditMultimedia" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <input type="hidden" asp-for="Id" />

                            <div class="mb-3">
                                <label asp-for="Descripcion" class="form-label"></label>
                                <input asp-for="Descripcion" class="form-control" placeholder="Ej: Foto oficial actualizada" />
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>

                            <hr class="elec-hr my-4" />

                            <div class="elec-alert mb-3">
                                <i class="bi bi-info-circle"></i>
                                Recuerda: debe quedar asignado a <strong>solo uno</strong> (Candidato o Lista).
                            </div>

                            <div class="mb-3">
                                <label asp-for="IdCandidato" class="form-label">Candidato</label>
                                <select asp-for="IdCandidato"
                                        class="form-select"
                                        asp-items="@(new SelectList(ViewBag.Candidatos, "Value", "Text", Model.IdCandidato))">
                                    <option value="">-- Seleccione un candidato --</option>
                                </select>
                                <span asp-validation-for="IdCandidato" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="IdLista" class="form-label">Lista</label>
                                <select asp-for="IdLista"
                                        class="form-select"
                                        asp-items="@(new SelectList(ViewBag.Listas, "Value", "Text", Model.IdLista))">
                                    <option value="">-- Seleccione una lista --</option>
                                </select>
                                <span asp-validation-for="IdLista" class="text-danger small"></span>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-3">
                                <button type="submit" class="btn elec-btn elec-btn-primary">
                                    <i class="bi bi-check-circle"></i> Guardar
                                </button>

                                <a asp-action="ListMultimedia" class="btn elec-btn elec-btn-secondary">
                                    Cancelar
                                </a>
                            </div>
                        </form>

                        @if (!string.IsNullOrWhiteSpace(Model.UrlFoto))
                        {
                            <hr class="elec-hr my-4" />
                            <div>
                                <h6 class="elec-section-title mb-2">Imagen actual</h6>
                                <img src="@Model.UrlFoto"
                                     alt="Vista previa"
                                     class="img-thumbnail"
                                     style="max-width:300px; max-height:300px;" />
                            </div>
                        }

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
