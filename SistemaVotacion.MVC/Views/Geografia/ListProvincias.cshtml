@model IEnumerable<SistemaVotacion.Modelos.Provincia>

@{
    ViewData["Title"] = "Gestión de Provincias";
}

<div class="elec-page container-fluid">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="elec-title mb-0">
                <i class="bi bi-map-fill me-2"></i>Gestión de Provincias
            </h1>
            <p class="text-muted mt-2">Administrar las provincias del sistema electoral.</p>
        </div>
        <div class="col-auto">
            <a asp-action="CreateProvincia" class="btn elec-btn elec-btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Nueva Provincia
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null) 
    {
        <div class="alert elec-alert elec-alert-success mb-4">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert elec-alert elec-alert-danger mb-4">@TempData["Error"]</div>
    }

    <div class="elec-card">
        <div class="elec-card-body p-0">
            <div class="elec-table-wrap">
                <table class="table elec-table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre de Provincia</th>
                            <th class="text-center">Nro. Ciudades</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td class="fw-bold">@item.NombreProvincia</td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary rounded-pill">
                                            @(item.Ciudades?.Count ?? 0)
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="DeleteProvincia" asp-route-id="@item.Id" class="btn elec-btn-sm elec-btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            @if (Model == null || !Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <p>No hay provincias registradas.</p>
                </div>
            }
        </div>
    </div>
</div>