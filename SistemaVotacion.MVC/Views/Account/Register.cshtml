@using SistemaVotacion.Modelos
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="elec-page container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="elec-card shadow-lg">
                <div class="elec-card-header text-center py-3 border-0">
                    <h3 class="mb-0 text-white fw-bold">
                        <i class="bi bi-person-plus-fill me-2"></i>Crear Nueva Cuenta
                    </h3>
                </div>

                <div class="elec-card-body p-4 p-md-5">
                    <form asp-action="Register" asp-controller="Account" method="post">

                        <div class="row">
                            <div class="col-md-6 border-end border-secondary pe-md-4">
                                <h5 class="elec-title mb-3 fs-5"><i class="bi bi-person-lines-fill me-2"></i>Datos Personales</h5>

                                <div class="mb-3">
                                    <label class="form-label text-white-50 small fw-bold">Nombres</label>
                                    <input type="text" class="form-control elec-form-control rounded-3" name="nombre" required placeholder="Ej: Juan Alberto">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label text-white-50 small fw-bold">Apellidos</label>
                                    <input type="text" class="form-control elec-form-control rounded-3" name="apellido" required placeholder="Ej: Pérez Castro">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label text-white-50 small fw-bold">Fecha de Nacimiento</label>
                                    <input type="date" class="form-control elec-form-control rounded-3" name="fechaNac" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label text-white-50 small fw-bold">Género</label>
                                    <select class="form-select elec-form-control rounded-3" name="idGenero" asp-items="ViewBag.Generos" required>
                                        <option value="">-- Seleccione Género --</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6 ps-md-4 mt-4 mt-md-0">
                                <h5 class="elec-title mb-3 fs-5"><i class="bi bi-card-heading me-2"></i>Identificación</h5>

                                <div class="mb-3">
                                    <label class="form-label text-white-50 small fw-bold">Tipo de Documento</label>
                                    <select class="form-select elec-form-control rounded-3" name="idTipoIdent" asp-items="ViewBag.TiposIdentificacion" required>
                                        <option value="">-- Seleccione Tipo --</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label text-white-50 small fw-bold">Número de Identificación</label>
                                    <input type="text" class="form-control elec-form-control rounded-3" name="cedula" required placeholder="0000000000">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label text-white-50 small fw-bold">Código Dactilar</label>
                                    <input type="text" class="form-control elec-form-control rounded-3" name="codigoDactilar" required placeholder="Ej: V1234V1234">
                                    <small class="text-white-50 opacity-75">Ubicado al reverso de su cédula.</small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label text-white-50 small fw-bold">Rol en el Sistema</label>
                                    <select class="form-select elec-form-control rounded-3" name="idRol" asp-items="ViewBag.Roles" required>
                                        <option value="">-- Seleccione Rol --</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4 border-secondary opacity-50">

                        <h5 class="elec-title mb-3 fs-5"><i class="bi bi-shield-lock-fill me-2"></i>Seguridad de la Cuenta</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-white-50 small fw-bold">Correo Electrónico</label>
                                <input type="email" class="form-control elec-form-control rounded-3" name="email" required placeholder="usuario@ejemplo.com">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label text-white-50 small fw-bold">Contraseña</label>
                                <input type="password" class="form-control elec-form-control rounded-3" name="password" required placeholder="Mínimo 8 caracteres">
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn elec-btn elec-btn-primary btn-lg rounded-3 fw-bold shadow-sm">
                                <i class="bi bi-person-check-fill me-2"></i>Crear Usuario
                            </button>
                            <a asp-action="Index" asp-controller="Home" class="btn elec-btn elec-btn-secondary rounded-3">
                                Cancelar
                            </a>
                        </div>

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert elec-alert elec-alert-danger mt-3 text-center border-0 shadow-sm">
                                <i class="bi bi-exclamation-octagon-fill me-2"></i>@ViewBag.ErrorMessage
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>