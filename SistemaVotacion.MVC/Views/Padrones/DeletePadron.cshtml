
@model SistemaVotacion.Modelos.Padron

@{
    ViewData["Title"] = "Eliminar del Padrón";
}

<div class="row justify-content-center elec-page">
    <div class="col-md-6">
        <div class="elec-card border-danger">
            <div class="elec-card-header bg-danger bg-opacity-25">
                <h5 class="mb-0 text-white">
                    <i class="bi bi-trash me-2"></i>Eliminar Registro del Padrón
                </h5>
            </div>
            <div class="elec-card-body text-center">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                    <h3 class="text-danger fw-bold mt-2">¿Estás seguro?</h3>
                    <p class="text-muted">Esta acción eliminará la habilitación del votante para este proceso.</p>
                </div>
                
                <div class="bg-dark bg-opacity-25 rounded p-3 mb-4 text-start border border-secondary">
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-white-50">Código Acceso</dt>
                        <dd class="col-sm-7 fw-bold text-white">@Model.CodigoAcceso</dd>

                        <dt class="col-sm-5 text-white-50">Votante ID</dt>
                        <dd class="col-sm-7 text-white">@Model.IdVotante</dd>
                        
                        <dt class="col-sm-5 text-white-50">Proceso ID</dt>
                        <dd class="col-sm-7 text-white">@Model.IdProceso</dd>

                        <dt class="col-sm-5 text-white-50">Estado</dt>
                        <dd class="col-sm-7 text-white">@(Model.HaVotado ? "YA VOTÓ" : "HABILITADO")</dd>
                    </dl>
                </div>
                
                <form asp-action="DeletePadron" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="ListPadron" class="btn elec-btn elec-btn-secondary">Cancelar</a>
                        <button type="submit" class="btn elec-btn elec-btn-danger px-4">Confirmar Eliminación</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
