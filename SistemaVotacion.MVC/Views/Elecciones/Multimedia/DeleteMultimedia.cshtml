@model SistemaVotacion.Modelos.Multimedia

@{
    ViewData["Title"] = "Eliminar Multimedia";
}

<div class="elec-page">
    <div class="container-fluid py-3">

        <div class="mb-3">
            <h2 class="elec-title mb-1">
                <i class="bi bi-trash"></i> @ViewData["Title"]
            </h2>
            <div class="elec-subtitle">
                Confirma la eliminación del recurso multimedia.
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="elec-card">
                    <div class="elec-card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-exclamation-triangle"></i> Confirmación
                        </h5>

                        <a asp-action="ListMultimedia" class="btn elec-btn elec-btn-secondary btn-sm">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>

                    <div class="elec-card-body">

                        <div class="elec-alert elec-alert-danger mb-3">
                            ¿Estás seguro de que deseas eliminar este registro? Esta acción no se puede deshacer.
                        </div>

                        <dl class="row mb-0">
                            <dt class="col-sm-4 elec-section-title">ID</dt>
                            <dd class="col-sm-8">@Model.Id</dd>

                            <dt class="col-sm-4 elec-section-title">Archivo</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrWhiteSpace(Model.UrlFoto))
                                {
                                    <a href="@Model.UrlFoto" target="_blank" class="text-decoration-none">
                                        @Model.UrlFoto
                                    </a>

                                    <div class="mt-2">
                                        <img src="@Model.UrlFoto"
                                             alt="Vista previa"
                                             class="img-thumbnail"
                                             style="max-width:300px; max-height:300px;" />
                                    </div>
                                }
                                else
                                {
                                    <span class="opacity-75">Sin archivo</span>
                                }
                            </dd>

                            <dt class="col-sm-4 elec-section-title">Descripción</dt>
                            <dd class="col-sm-8">
                                @(string.IsNullOrWhiteSpace(Model.Descripcion) ? "Sin descripción" : Model.Descripcion)
                            </dd>

                            <dt class="col-sm-4 elec-section-title">Candidato</dt>
                            <dd class="col-sm-8">@Model.Candidato?.NombreCandidato ?? "No asignado"</dd>

                            <dt class="col-sm-4 elec-section-title">Lista</dt>
                            <dd class="col-sm-8">@Model.Lista?.NombreLista ?? "No asignada"</dd>
                        </dl>

                        <hr class="elec-hr my-4" />

                        <form asp-action="DeleteMultimedia" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />

                            <div class="d-flex justify-content-end gap-2">
                                <button type="submit" class="btn elec-btn elec-btn-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>

                                <a asp-action="ListMultimedia" class="btn elec-btn elec-btn-secondary">
                                    Cancelar
                                </a>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
