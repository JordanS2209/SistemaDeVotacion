@{
    // 1. Lógica unificada: Solo mostramos si está autenticado Y la vista no pidió esconderlo
    bool isHomeOrGuest = ViewData["HideSidebar"] as bool? ?? false;
    bool showSidebar = User.Identity.IsAuthenticated && !isHomeOrGuest;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Electoral</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

@* 2. El Body ahora sabe si realmente hay un sidebar presente *@
<body class="@(showSidebar ? "layout-with-sidebar" : "layout-no-sidebar")">

    @if (showSidebar)
    {
        <aside class="sidebar shadow" id="sidebar">
            <div class="sidebar-header">
                <div class="logo-box">
                    <i class="bi bi-shield-check fs-4"></i>
                </div>
                <div class="logo-text">
                    <h5 class="mb-0">SISTEMA ELECTORAL<br />UTN</h5>
                    <small class="text-info opacity-75" style="font-size: 0.7rem;">Gestión Académica</small>
                </div>
            </div>

            <nav class="nav-links">
                

                <a asp-controller="Aspirantes" asp-action="ListAspirantes" class="nav-item-sidebar">
                    <i class="bi bi-people"></i> Aspirantes
                </a>

                @if (User.IsInRole("SUPER ADMINISTRADOR") || User.IsInRole("ADMINISTRADOR"))
                {
                    <div class="mt-4 mb-2 px-3 small text-uppercase opacity-50 fw-bold" style="font-size: 0.65rem; letter-spacing: 1px;">Administración</div>
                    <a asp-controller="Account" asp-action="UsuariosBloqueados" class="nav-item-sidebar">
                        <i class="bi bi-person-gear"></i> Usuarios Bloqueados
                    </a>

                    <a asp-controller="Geografia" asp-action="Index"
                       class="nav-item-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Geografia" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i> Gestión Geográfica
                    </a>

                    <a asp-controller="Account" asp-action="Register" class="nav-item-sidebar">
                        <i class="bi bi-person-gear"></i> Registrar nuevo usuario
                    </a>

                    <a asp-controller="Creation" asp-action="Index" class="nav-item-sidebar">
                        <i class="bi bi-person-gear"></i> Gestionar Procesos
                    </a>
                }
            </nav>
        </aside>
    }

    @* 3. El wrapper y el navbar ahora se ajustan según 'showSidebar' *@
    <div id="content-wrapper" class="@(!showSidebar ? "no-sidebar" : "")">
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark fixed-top navbar-custom-offset shadow-sm @(!showSidebar ? "no-sidebar" : "")">
                <div class="container-fluid px-3">
                    <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-check2-square text-primary-custom"></i> Sistema Votación
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Consultas" asp-action="Index">Consulta tu lugar de votacion</a>
                            </li>

                            @if (User.Identity.IsAuthenticated && User.IsInRole("SUPER ADMINISTRADOR"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-warning fw-bold" href="#" data-bs-toggle="dropdown">Admin Pro</a>
                                    <ul class="dropdown-menu shadow bg-dark">
                                        <li><a class="dropdown-item text-light" asp-controller="Account" asp-action="Register">Registrar Usuarios</a></li>
                                        <li><a class="dropdown-item text-light" asp-controller="Geografia" asp-action="Index">Geografía</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>

                        <ul class="navbar-nav ms-auto">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="btn btn-primary-custom btn-sm rounded-pill px-4 shadow-sm" asp-controller="Account" asp-action="Index">
                                        <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle btn btn-outline-info btn-sm rounded-pill px-3 text-white" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow border-0 bg-dark mt-2">
                                        <li><a class="dropdown-item text-danger fw-bold" asp-controller="Account" asp-action="Logout"><i class="bi bi-power me-2"></i>Cerrar Sesión</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="pb-5">
            @if (!showSidebar)
            {
                @RenderBody()
            }
            else
            {
                <div class="container-fluid pt-4 px-4">
                    @RenderBody()
                </div>
            }
        </main>

        <footer class="mt-auto py-3 text-center opacity-50 small border-top border-secondary">
            © 2026 - Universidad Técnica del Norte
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>