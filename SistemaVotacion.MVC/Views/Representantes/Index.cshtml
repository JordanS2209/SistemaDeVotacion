@model IEnumerable<SistemaVotacion.Modelos.RepresentanteJunta>

@{
    ViewData["Title"] = "Gestión de Representantes de Juntas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Asignar Nuevo Representante
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Usuario</th>
                            <th class="py-3">Rol</th>
                            <th class="py-3">Junta Receptora</th>
                            <th class="py-3">Proceso Electoral</th>
                            <th class="pe-4 py-3 text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">
                                        @($"{item.Usuario?.Nombres} {item.Usuario?.Apellidos}")
                                        <small class="d-block text-muted fw-normal">@item.Usuario?.Email</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@(item.Rol?.NombreRol ?? "Sin Rol")</span>
                                    </td>
                                    <td>
                                        Junta @(item.Junta?.NumeroJunta ?? "N/A")
                                        <small class="d-block text-muted">ID: @item.IdJunta</small>
                                    </td>
                                    <td>
                                        @(item.Proceso?.NombreProceso ?? "Sin Proceso")
                                    </td>
                                    <td class="pe-4 text-end">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-people fs-1 d-block mb-3"></i>
                                    No hay representantes asignados aún.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
