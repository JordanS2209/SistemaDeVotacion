@model SistemaVotacion.Modelos.OpcionConsulta

<div class="container form-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card shadow border-0">
                <div class="card-header form-card-header bg-danger text-white text-center">
                    <i class="bi bi-trash"></i> Eliminar Opción de Consulta
                </div>
                <div class="card-body form-card-body">
                    <h5 class="text-center mb-3">¿Estás seguro que deseas eliminar esta opción?</h5>
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Texto Opción</dt>
                        <dd class="col-sm-8">@Model.TextoOpcion</dd>

                        <dt class="col-sm-4">Pregunta asociada</dt>
                        <dd class="col-sm-8">@Model.Pregunta?.TextoPregunta ?? "Pregunta no disponible"</dd>
                    </dl>

                    <form asp-action="DeleteOpcionConsulta" asp-route-id="@Model.Id" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-danger py-2">Eliminar</button>
                            <a asp-action="ListOpcionConsulta" class="btn btn-secondary py-2">Volver al listado</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
