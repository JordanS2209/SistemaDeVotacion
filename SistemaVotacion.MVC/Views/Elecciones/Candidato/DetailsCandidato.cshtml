@model SistemaVotacion.Modelos.Candidato

@{
    ViewData["Title"] = "Detalles Candidato";
}

<div class="elec-page">
    <div class="container-fluid py-3">

        <div class="mb-3">
            <h2 class="elec-title mb-1">
                <i class="bi bi-person-badge"></i> @ViewData["Title"]
            </h2>
            <div class="elec-subtitle">
                Información detallada del candidato seleccionado.
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="elec-card">

                    <div class="elec-card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-eye"></i> Datos del Candidato
                        </h5>

                        <a asp-action="ListCandidato" class="btn elec-btn elec-btn-secondary btn-sm">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>

                    <div class="elec-card-body">

                        <dl class="row mb-0">
                            <dt class="col-sm-4 elec-section-title">ID</dt>
                            <dd class="col-sm-8">@Model.Id</dd>

                            <dt class="col-sm-4 elec-section-title">Nombre</dt>
                            <dd class="col-sm-8">@Model.NombreCandidato</dd>

                            <dt class="col-sm-4 elec-section-title">Lista</dt>
                            <dd class="col-sm-8">
                                @(Model.Lista?.NombreLista ?? "No asignada")
                            </dd>

                            <dt class="col-sm-4 elec-section-title">Dignidad</dt>
                            <dd class="col-sm-8">
                                @(Model.Dignidad?.NombreDignidad ?? "No asignada")
                            </dd>
                        </dl>

                        <hr class="elec-hr my-4" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="EditCandidato"
                               asp-route-id="@Model.Id"
                               class="btn elec-btn elec-btn-warn">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>

                            <a asp-action="ListCandidato"
                               class="btn elec-btn elec-btn-secondary">
                                Cancelar
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
