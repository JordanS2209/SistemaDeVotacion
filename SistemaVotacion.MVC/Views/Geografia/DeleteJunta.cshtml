@model SistemaVotacion.Modelos.JuntaReceptora

@{
    ViewData["Title"] = "Eliminar Junta";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            @* Tarjeta blanca con borde superior rojo para advertencia *@
            <div class="card border-0 shadow-lg bg-white" style="border-top: 5px solid #dc3545 !important;">
                <div class="card-header bg-transparent border-0 pt-4 text-center">
                    <div class="display-4 text-danger mb-2">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                    </div>
                    <h4 class="text-dark fw-bold">¿Eliminar esta Junta?</h4>
                </div>

                <div class="card-body text-center p-4">
                    <p class="text-secondary mb-1">Está a punto de borrar la mesa electoral:</p>
                    @* Resaltamos el número con tu azul brillante *@
                    <h2 class="fw-bold mb-3" style="color: #4DBFEB;">Junta No. @Model.NumeroJunta</h2>

                    <div class="bg-light rounded p-3 mb-4 text-start border">
                        <p class="mb-2 text-dark">
                            <strong class="text-uppercase small opacity-75">Recinto:</strong><br />
                            <i class="bi bi-building text-primary me-2"></i>@(Model.Recintos?.NombreRecinto ?? "No asignado")
                        </p>
                        <p class="mb-0 text-dark">
                            <strong class="text-uppercase small opacity-75">Género:</strong><br />
                            <i class="bi bi-person-badge text-primary me-2"></i>@(Model.Genero?.DetalleGenero ?? (Model.IdGenero == 1 ? "Masculino" : "Femenino"))
                        </p>
                    </div>

                    <div class="alert alert-warning border-0 small shadow-sm text-start">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>Atención:</strong> Esta acción no se puede deshacer. Si existen <strong>Padrones</strong> o <strong>Votos</strong> vinculados a esta junta, la eliminación será rechazada por el sistema.
                    </div>

                    <form asp-action="DeleteJuntaConfirmed" method="post" class="mt-4">
                        @* ID oculto para que el controlador sepa qué registro borrar *@
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger py-2 fw-bold shadow">
                                <i class="bi bi-trash3-fill me-2"></i>Confirmar Eliminación
                            </button>
                            <a asp-action="ListJuntas" class="btn btn-link text-secondary text-decoration-none">
                                Cancelar y volver
                            </a>
                        </div>
                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 small border-0 shadow-sm">
                            @ViewBag.Error
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>