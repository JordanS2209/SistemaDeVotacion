@model SistemaVotacion.Modelos.Parroquia

@{
    ViewData["Title"] = "Crear Parroquia";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-building-add"></i> Nueva Parroquia</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateParroquia" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ciudad a la que pertenece</label>
                            <select asp-for="IdCiudad" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.Ciudad, "Id", "NombreCiudad"))"
                                    required>
                                <option value="">-- Seleccione una Ciudad --</option>
                            </select>
                            <span asp-validation-for="IdCiudad" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NombreParroquia" class="form-label fw-bold">Nombre de la Parroquia </label>
                            <input asp-for="NombreParroquia" class="form-control" placeholder="Ej: San Luis" required />
                            <span asp-validation-for="NombreParroquia" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success py-2">
                                <i class="bi bi-save"></i> Guardar Parroquia
                            </button>
                            <a asp-action="ListParroquias" class="btn btn-outline-secondary">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>