@model SistemaVotacion.Modelos.ActaAuditoria

@{
    ViewData["Title"] = "Generar Acta de Auditoría";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card elec-card shadow-sm border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-file-earmark-lock me-2"></i>Generar Acta de Cierre</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info text-dark">
                        <i class="bi bi-info-circle me-2"></i>
                        Esta acción generará una "foto" inmutable de los resultados actuales de la Junta seleccionada.
                    </div>

                    <form asp-action="Generar">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Proceso Electoral</label>
                            <select name="idProceso" class="form-select" asp-items="ViewBag.Procesos" required>
                                <option value="">-- Seleccione un Proceso --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Junta Receptora</label>
                            <select name="idJunta" class="form-select" asp-items="ViewBag.Juntas" required>
                                <option value="">-- Seleccione una Junta --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Observaciones</label>
                            <textarea name="observaciones" class="form-control" rows="3" placeholder="Ej: Cierre normal sin novedades..."></textarea>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-warning text-dark fw-bold">
                                <i class="bi bi-camera me-2"></i>Generar Acta
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
