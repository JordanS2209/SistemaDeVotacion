
@model SistemaVotacion.Modelos.JuntaReceptora

@{
    ViewData["Title"] = "Crear Junta";
}

<div class="row justify-content-center elec-page">
    <div class="col-md-6">
        <div class="elec-card">
            <div class="elec-card-header">
                <h5 class="mb-0 text-white">
                    <i class="bi bi-plus-circle me-2"></i>Nueva Junta Receptora
                </h5>
            </div>
            <div class="elec-card-body">
                <form asp-action="CreateJunta" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert elec-alert elec-alert-danger text-danger mb-4"></div>

                    <div class="mb-4">
                        <label asp-for="IdRecinto" class="form-label control-label">Recinto Electoral</label>
                        <select asp-for="IdRecinto" class="form-select" asp-items="ViewBag.Recintos">
                            <option value="">-- Seleccione Recinto --</option>
                        </select>
                        <span asp-validation-for="IdRecinto" class="text-danger small"></span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="NumeroJunta" class="form-label control-label">Número de Junta</label>
                            <input asp-for="NumeroJunta" type="number" class="form-control" placeholder="Ej: 104" />
                            <span asp-validation-for="NumeroJunta" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="IdGenero" class="form-label control-label">Género Asignado</label>
                            <select asp-for="IdGenero" class="form-select" asp-items="ViewBag.Generos">
                                <option value="">-- Seleccione --</option>
                            </select>
                            <span asp-validation-for="IdGenero" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between pt-3">
                        <a asp-action="ListJunta" class="btn elec-btn elec-btn-secondary">Cancelar</a>
                        <button type="submit" class="btn elec-btn elec-btn-success px-4">
                            <i class="bi bi-check-lg me-2"></i>Crear Junta
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
