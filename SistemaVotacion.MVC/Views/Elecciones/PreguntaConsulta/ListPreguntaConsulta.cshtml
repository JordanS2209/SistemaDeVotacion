@model IEnumerable<SistemaVotacion.Modelos.PreguntaConsulta>
@{
    ViewData["Title"] = "Preguntas de Consulta";
}


<div class="elec-page">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="elec-title">Preguntas de Consulta</h2>
            <p class="elec-subtitle">Formule las preguntas para los procesos de consulta popular</p>
        </div>
        <a asp-action="CreatePreguntaConsulta" class="btn elec-btn elec-btn-success">
            <i class="bi bi-plus-lg"></i> Crear Nueva Pregunta
        </a>
    </div>

    <div class="elec-table-wrap">
        <div class="table-responsive">
            <table class="table elec-table mb-0 align-middle">
                <thead>
                    <tr>
                        <th style="width: 50px;">@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.TextoPregunta)</th>
                        <th>@Html.DisplayNameFor(model => model.NumeroPregunta)</th>
                        <th>Proceso Electoral</th>
                        <th style="width: 250px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-muted">@item.Id</td>
                            <td class="fw-semibold">@item.TextoPregunta</td>
                            <td>@item.NumeroPregunta</td>
                            <td>
                                @if (item.ProcesosElectorales != null)
                                {
                                    <span class="elec-badge elec-badge-info text-white">@item.ProcesosElectorales.NombreProceso</span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No asignado</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-action="EditPreguntaConsulta" asp-route-id="@item.Id" class="btn elec-btn elec-btn-warn btn-sm">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="DetailsPreguntaConsulta" asp-route-id="@item.Id" class="btn elec-btn elec-btn-info btn-sm">
                                        <i class="bi bi-info-circle"></i> Detalles
                                    </a>
                                    <a asp-action="DeletePreguntaConsulta" asp-route-id="@item.Id" class="btn elec-btn elec-btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-4">
        <a asp-action="Index" class="btn elec-btn elec-btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Panel
        </a>
    </div>
</div>
