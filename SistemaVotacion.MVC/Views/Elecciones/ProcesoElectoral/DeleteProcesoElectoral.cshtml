@model SistemaVotacion.Modelos.ProcesoElectoral

<div class="elec-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">
                <div class="elec-card">
                    <div class="elec-card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-trash"></i> Eliminar Proceso Electoral
                        </h5>
                        <span class="elec-badge elec-badge-cerrado">Acción irreversible</span>
                    </div>

                    <div class="elec-card-body">
                        <p class="text-center elec-subtitle mb-4">
                            ¿Está seguro que desea eliminar este registro?
                        </p>

                        <dl class="row mb-0">
                            <dt class="col-sm-4 elec-section-title">Nombre Proceso</dt>
                            <dd class="col-sm-8">@Model.NombreProceso</dd>

                            <dt class="col-sm-4 elec-section-title">Fecha Inicio</dt>
                            <dd class="col-sm-8">@Model.FechaInicio.ToShortDateString()</dd>

                            <dt class="col-sm-4 elec-section-title">Fecha Fin</dt>
                            <dd class="col-sm-8">@Model.FechaFin.ToShortDateString()</dd>

                            <dt class="col-sm-4 elec-section-title">Tipo de Proceso</dt>
                            <dd class="col-sm-8">@Model.IdTipoProceso</dd>
                        </dl>

                        <hr class="elec-hr my-4" />

                        <form asp-action="DeleteProcesoElectoral" method="post">
                            <input type="hidden" asp-for="Id" />

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn elec-btn elec-btn-danger py-2">
                                    <i class="bi bi-trash3"></i> Eliminar
                                </button>

                                <a asp-action="ListProcesoElectoral" class="btn elec-btn elec-btn-secondary py-2">
                                    <i class="bi bi-arrow-left"></i> Volver a lista de Procesos Electorales
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
