@model IEnumerable<SistemaVotacion.Modelos.TipoProceso>

@{
    ViewData["Title"] = "Lista de Tipos de Proceso";
}

<h1>Lista de Tipos de Proceso</h1>

<p>
    <a asp-action="CreateTipoProcesos" class="btn btn-primary">Crear nuevo</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.NombreTipoProceso)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.NombreTipoProceso)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>
                    <a asp-action="EditTipoProceso" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="DetailsTipoProceso" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="DeleteTipoProceso" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>

                </td>
            </tr>
        }
    </tbody>
</table>
