@model IEnumerable<SistemaVotacion.Modelos.Rol>

@{
    ViewData["Title"] = "Gestión de Roles";
}

<div class="elec-page container-fluid">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="elec-title mb-0">
                <i class="bi bi-person-badge-fill me-2"></i>Gestión de Roles
            </h1>
            <p class="text-muted mt-2">Definición de roles y permisos de usuarios.</p>
        </div>
        <div class="col-auto">
            <a asp-action="CreateRol" class="btn elec-btn elec-btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Nuevo Rol
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert elec-alert elec-alert-success mb-4">@TempData["Success"]</div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert elec-alert elec-alert-danger mb-4">@ViewBag.Error</div>
    }

    <div class="elec-card">
        <div class="elec-card-body p-0">
            <div class="elec-table-wrap">
                <table class="table elec-table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre del Rol</th>
                            <th>Descripción</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td class="fw-bold text-primary">@item.NombreRol</td>
                                    <td>
                                        <span class="text-muted small">@item.DescripcionRol</span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="DeleteRol" asp-route-id="@item.Id" class="btn elec-btn-sm elec-btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            @if (Model == null || !Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <p>No hay roles registrados.</p>
                </div>
            }
        </div>
    </div>
</div>