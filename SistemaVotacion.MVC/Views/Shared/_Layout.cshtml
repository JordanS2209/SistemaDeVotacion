<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Electoral</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <aside class="sidebar shadow" id="sidebar">
        <div class="sidebar-header">
            <div class="logo-box">
                <i class="bi bi-shield-check fs-4"></i>
            </div>
            <div class="logo-text">
                <h5>SISTEMA ELECTORAL<br />UTN</h5>
                <small class="text-info opacity-75" style="font-size: 0.7rem;">Gestión de Maestrías</small>
            </div>
        </div>

        <nav class="nav-links">
            <a asp-controller="Home" asp-action="Index"
               class="nav-item-sidebar @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>

            <a asp-controller="Aspirantes" asp-action="ListAspirantes" class="nav-item-sidebar">
                <i class="bi bi-people"></i> Aspirantes
            </a>

            <a asp-controller="Programas" asp-action="ListProgramas" class="nav-item-sidebar">
                <i class="bi bi-journal-bookmark"></i> Programas
            </a>

            @if (User.IsInRole("Super Administrador"))
            {
                <div class="mt-4 mb-2 px-3 small text-uppercase opacity-50 fw-bold" style="font-size: 0.65rem; letter-spacing: 1px;">Administración</div>
                <a asp-controller="Roles" asp-action="ListRoles" class="nav-item-sidebar">
                    <i class="bi bi-person-lock"></i> Gestión de Roles
                </a>
            }
        </nav>
    </aside>

    <div id="content-wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark fixed-top navbar-custom-offset shadow-sm">
                <div class="container-fluid px-3">
                    <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-check2-square text-primary-custom"></i> Sistema Votación
                    </a>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white-50" asp-controller="Consultas" asp-action="Index">Consulta Lugar</a>
                            </li>
                        </ul>

                        <ul class="navbar-nav ms-auto">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="btn btn-primary-custom btn-sm rounded-pill px-4" asp-controller="Account" asp-action="Index">
                                        Login
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle btn btn-outline-info btn-sm rounded-pill px-3" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-person-circle"></i> @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow border-0 bg-dark">
                                        <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="pb-3" style="margin-top: 90px;">
            <div class="container-fluid px-4">
                @RenderBody()
            </div>
        </main>

        <footer class="mt-auto py-3 text-center opacity-50 small border-top border-secondary">
            © 2026 - Universidad Técnica del Norte
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>