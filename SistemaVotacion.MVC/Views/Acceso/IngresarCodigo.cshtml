@{
    ViewData["Title"] = "Ingresar código de votación";
}

<link rel="stylesheet" href="~/css/IngresarCodigo.css" />

<div class="codigo-container">
    <div class="codigo-card">
        <h2>Ingresar código de votación</h2>

        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success">
                @TempData["Mensaje"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
        <form asp-controller="Acceso" asp-action="IngresarCodigo" method="post" class="codigo-form-hero">
            <input type="text" id="codigo" name="codigo" maxlength="6" class="codigo-input" placeholder="Código de 6 dígitos" autocomplete="off" required />
            <button type="submit" class="codigo-btn">CONTINUAR</button>
        </form>
    </div>
</div>