@model SistemaVotacion.Modelos.Votante

@{
    ViewData["Title"] = "DeleteVotante";
}

<div class="row justify-content-center elec-page">
    <div class="col-md-8">
        <div class="elec-card border-danger">
            <div class="elec-card-header bg-danger bg-opacity-25">
                <h5 class="mb-0 text-white">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Eliminar Votante
                </h5>
            </div>
            <div class="elec-card-body">
                <div class="alert elec-alert elec-alert-danger mb-4">
                    <i class="bi bi-exclamation-circle-fill me-2"></i>
                    ¿Está seguro de que desea eliminar este registro? Esta acción no se puede deshacer.
                </div>

                <dl class="row mb-0">
                    <dt class="col-sm-4 text-white-50">@Html.DisplayNameFor(model => model.Id)</dt>
                    <dd class="col-sm-8 text-white">@Html.DisplayFor(model => model.Id)</dd>

                    <dt class="col-sm-4 text-white-50">Usuario</dt>
                    <dd class="col-sm-8 text-white">
                        @if (Model.Usuario != null)
                        {
                            @($"{Model.Usuario.Nombres} {Model.Usuario.Apellidos}")
                        }
                        else
                        {
                            @Model.IdUsuario
                        }
                    </dd>

                    <dt class="col-sm-4 text-white-50">Junta</dt>
                    <dd class="col-sm-8 text-white">
                        @if (Model.Junta != null)
                        {
                            @($"Junta {Model.Junta.NumeroJunta}")
                        }
                        else
                        {
                            @Model.IdJunta
                        }
                    </dd>

                    <dt class="col-sm-4 text-white-50">@Html.DisplayNameFor(model => model.Estado)</dt>
                    <dd class="col-sm-8">
                         @if (Model.Estado)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </dd>
                </dl>

                <form asp-action="DeleteVotante" method="post" class="mt-4 pt-3 border-top border-secondary">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn elec-btn elec-btn-danger me-2">
                        <i class="bi bi-trash-fill me-1"></i>Confirmar Eliminación
                    </button>
                    <a asp-action="ListVotantes" class="btn elec-btn elec-btn-secondary">
                        <i class="bi bi-x-lg me-1"></i>Cancelar
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
