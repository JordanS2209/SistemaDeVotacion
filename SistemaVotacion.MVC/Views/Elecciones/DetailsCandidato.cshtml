@model SistemaVotacion.Modelos.Candidato

@{
    ViewData["Title"] = "Detalles del Candidato";
}

<h1>Detalles del Candidato</h1>

<div>
    <h4>Candidato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCandidato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCandidato)
        </dd>

        <dt class="col-sm-2">
            Lista
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lista.NombreLista)
        </dd>

        <dt class="col-sm-2">
            Dignidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dignidad.NombreDignidad)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="EditCandidato" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="ListCandidato" class="btn btn-secondary">Volver a la lista</a>
</div>
