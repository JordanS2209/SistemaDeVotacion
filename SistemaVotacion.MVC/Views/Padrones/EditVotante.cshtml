@model SistemaVotacion.Modelos.Votante

@{
    ViewData["Title"] = "EditVotante";
}

<div class="row justify-content-center elec-page">
    <div class="col-md-6">
        <div class="elec-card">
            <div class="elec-card-header">
                <h5 class="mb-0 text-white">
                    <i class="bi bi-pencil-square me-2"></i>Editar Votante
                </h5>
            </div>
            <div class="elec-card-body">
                <form asp-action="EditVotante">
                    <div asp-validation-summary="ModelOnly" class="alert elec-alert elec-alert-danger mb-4"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label asp-for="IdUsuario" class="form-label control-label">Usuario</label>
                        <select asp-for="IdUsuario" class="form-select" asp-items="ViewBag.Usuarios">
                            <option value="">-- Selecciona un usuario --</option>
                        </select>
                        <span asp-validation-for="IdUsuario" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="IdJunta" class="form-label control-label">Junta Receptora</label>
                        <select asp-for="IdJunta" class="form-select" asp-items="ViewBag.Juntas">
                            <option value="">-- Selecciona una junta --</option>
                        </select>
                        <span asp-validation-for="IdJunta" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input" asp-for="Estado" />
                        <label class="form-check-label text-white" asp-for="Estado">
                            Votante Activo
                        </label>
                        <span asp-validation-for="Estado" class="text-danger small d-block"></span>
                    </div>

                    <div class="d-flex justify-content-between pt-3">
                        <a asp-action="ListVotantes" class="btn elec-btn elec-btn-secondary">Cancelar</a>
                        <button type="submit" class="btn elec-btn elec-btn-primary px-4">
                            <i class="bi bi-save me-2"></i>Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
