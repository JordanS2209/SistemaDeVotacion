@model SistemaVotacion.Modelos.ActaAuditoria

@{
    ViewData["Title"] = "Detalle del Acta de Auditoría";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card elec-card shadow-lg border-warning">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-file-earmark-lock-fill me-2"></i>Acta #@Model.Id
                    </h4>
                    <span class="badge bg-dark">Junta @(Model.Juntas?.NumeroJunta ?? Model.IdJunta.ToString())</span>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-glass text-uppercase">Información General</h6>
                            <ul class="list-unstyled">
                                <li><strong>Proceso:</strong> @(Model.Procesos?.NombreProceso ?? Model.IdProceso.ToString())</li>
                                <li><strong>Recinto:</strong> @(Model.Juntas?.Recintos?.NombreRecinto ?? "N/A")</li>
                                <li><strong>Fecha Cierre:</strong> @Model.FechaCierre.ToLocalTime()</li>
                            </ul>
                        </div>
                        <div class="col-md-6 text-end">
                            <h6 class="text-glass text-uppercase">Totales</h6>
                            <ul class="list-unstyled">
                                <li class="fs-5"><strong>Total Sufragantes:</strong> @Model.TotalSufragantesPadron</li>
                                <li class="fs-5"><strong>Votos en Urna:</strong> @Model.VotosEnUrna</li>
                            </ul>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-glass text-uppercase">Seguridad</h6>
                        <div class="p-3 elec-alert border rounded font-monospace small text-break">
                            <strong>HASH:</strong> @Model.HashSeguridad
                        </div>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-glass text-uppercase">Observaciones</h6>
                        <p class="fst-italic border-start border-4 border-warning ps-3">
                            @(string.IsNullOrEmpty(Model.Observaciones) ? "Sin observaciones registradas." : Model.Observaciones)
                        </p>
                    </div>
                    
                    <div class="text-center mt-5">
                       
                    </div>
                </div>
                <div class="card-footer bg-transparent d-flex justify-content-between p-3">
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
