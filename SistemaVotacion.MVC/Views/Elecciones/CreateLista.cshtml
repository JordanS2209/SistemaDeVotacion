@model SistemaVotacion.Modelos.Lista

@{
    ViewData["Title"] = "CreateLista";
}

<h1>CreateLista</h1>

<h4>Lista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLista">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NombreLista" class="control-label"></label>
                <input asp-for="NombreLista" class="form-control" />
                <span asp-validation-for="NombreLista" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroLista" class="control-label"></label>
                <input asp-for="NumeroLista" class="form-control" />
                <span asp-validation-for="NumeroLista" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdProceso" class="control-label"></label>
                <select asp-for="IdProceso" class="form-control" asp-items="ViewBag.Procesos">
                    <option value="">-- Seleccione un proceso --</option>
                </select>
                <span asp-validation-for="IdProceso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListLista">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
