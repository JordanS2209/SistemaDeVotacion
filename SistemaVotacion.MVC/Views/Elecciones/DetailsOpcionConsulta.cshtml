@model SistemaVotacion.Modelos.OpcionConsulta

@{
    ViewData["Title"] = "Detalles Opción de Consulta";
}

<h1>Detalles de Opción de Consulta</h1>

<div>
    <h4>OpciónConsulta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TextoOpcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TextoOpcion)
        </dd>

        <dt class="col-sm-2">
            Pregunta
        </dt>
        <dd class="col-sm-10">
            @(Model.Pregunta != null ? Model.Pregunta.TextoPregunta : "Pregunta no disponible")
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Editar", "EditOpcionConsulta", new { id = Model.Id }) |
    <a asp-action="EditOpcionConsulta" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="ListOpcionConsulta" class="btn btn-secondary">Volver</a>

</div>
