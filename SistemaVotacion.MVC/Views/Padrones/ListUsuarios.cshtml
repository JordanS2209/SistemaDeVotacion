@model IEnumerable<SistemaVotacion.Modelos.UsuarioListDto>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<div class="elec-page container-fluid">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="elec-title mb-0">
                <i class="bi bi-people-fill me-2"></i>Listado de Usuarios
            </h1>
            <p class="text-muted mt-2">Administración de usuarios del sistema.</p>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert elec-alert elec-alert-danger mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.Error
        </div>
    }

    <div class="elec-card">
        <div class="elec-card-body p-0">
            <div class="elec-table-wrap">
                <table class="table elec-table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Email</th>
                            <th>Cédula</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Nombres</td>
                                <td>@item.Apellidos</td>
                                <td>@item.Email</td>
                                <td>@item.NumeroIdentificacion</td>
                                <td>
                                    <span class="badge elec-badge elec-badge-pendiente">
                                        @item.Rol
                                    </span>
                                </td>
                                <td>
                                    @if (item.CuentaBloqueada.GetValueOrDefault())
                                    {
                                        <span class="badge bg-danger">Bloqueada</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Activa</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="EditUsuario"
                                           asp-route-id="@item.Id"
                                           class="btn elec-btn-sm elec-btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <a asp-action="DeleteUsuario"
                                           asp-route-id="@item.Id"
                                           class="btn elec-btn-sm elec-btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
