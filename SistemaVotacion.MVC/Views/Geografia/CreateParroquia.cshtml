@model SistemaVotacion.Modelos.Parroquia

@{
    ViewData["Title"] = "Crear Parroquia";
}

<div class="elec-page container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="elec-card">
                <div class="elec-card-header">
                    <h4 class="elec-title mb-0">Nueva Parroquia</h4>
                </div>
                <div class="elec-card-body">
                    <form asp-action="CreateParroquia" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ciudad (Cantón)</label>
                            <select asp-for="IdCiudad" class="form-select elec-form-control"
                                    asp-items="ViewBag.Ciudades"
                                    required>
                                <option value="">-- Seleccione Ciudad --</option>
                            </select>
                            <span asp-validation-for="IdCiudad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NombreParroquia" class="form-label fw-bold">Nombre de la Parroquia</label>
                            <input asp-for="NombreParroquia" class="form-control elec-form-control" placeholder="Ej: San Jordán" required />
                            <span asp-validation-for="NombreParroquia" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="ListParroquias" class="btn elec-btn elec-btn-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn elec-btn elec-btn-primary">Guardar Parroquia</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}