@model SistemaVotacion.Modelos.Lista

<div class="container form-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card shadow border-0">
                <div class="card-header form-card-header bg-info text-white text-center">
                    <i class="bi bi-eye"></i> Detalles Lista
                </div>
                <div class="card-body form-card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Nombre Lista</dt>
                        <dd class="col-sm-8">@Model.NombreLista</dd>

                        <dt class="col-sm-4">Número Lista</dt>
                        <dd class="col-sm-8">@Model.NumeroLista</dd>

                        <dt class="col-sm-4">Proceso Electoral</dt>
                        <dd class="col-sm-8">@Model.Proceso?.NombreProceso ?? "No asignado"</dd>
                    </dl>

                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="EditLista" asp-route-id="@Model.Id" class="btn btn-warning py-2">Editar</a>
                        <a asp-action="ListLista" class="btn btn-secondary py-2">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
