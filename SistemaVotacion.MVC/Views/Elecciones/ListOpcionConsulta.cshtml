@model IEnumerable<SistemaVotacion.Modelos.OpcionConsulta>
@{
    ViewData["Title"] = "Opciones de Consulta";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h1>Opciones de Consulta</h1>
        <a asp-action="CreateOpcionConsulta" class="btn btn-success">Crear Nueva</a>
    </div>

    <div class="table-responsive card shadow-sm">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.TextoOpcion)</th>
                    <th>Pregunta</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.TextoOpcion</td>
                        <td>@(item.Pregunta != null ? item.Pregunta.TextoPregunta : "Pregunta no disponible")</td>
                        <td>
                            <a asp-action="EditOpcionConsulta" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="DetailsOpcionConsulta" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="DeleteOpcionConsulta" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
