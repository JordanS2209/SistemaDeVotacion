@model SistemaVotacion.Modelos.UsuarioEditDto

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card elec-card shadow-lg border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-trash-fill me-2"></i>Eliminar Usuario</h4>
            </div>
            <div class="card-body p-4 text-center">
                <div class="mb-4">
                    <i class="bi bi-exclamation-circle text-danger display-1"></i>
                    <h3 class="mt-3">¿Estás seguro?</h3>
                    <p class="text-muted">Estás a punto de eliminar al siguiente usuario:</p>
                </div>
                
                <div class="list-group list-group-flush text-start mb-4 border rounded">
                    <div class="list-group-item bg-transparent">
                        <strong>ID:</strong> @Model.Id
                    </div>
                    <div class="list-group-item bg-transparent">
                        <strong>Nombres:</strong> @Model.Nombres
                    </div>
                    <div class="list-group-item bg-transparent">
                        <strong>Apellidos:</strong> @Model.Apellidos
                    </div>
                    <div class="list-group-item bg-transparent">
                        <strong>Email:</strong> @Model.Email
                    </div>
                    <div class="list-group-item bg-transparent">
                        <strong>Identificación:</strong> @Model.NumeroIdentificacion
                    </div>
                </div>

                <form asp-action="DeleteUsuario">
                    <input type="hidden" asp-for="Id" />
                     @* Enviamos campos ocultos necesarios para reconstruir el objeto si retorna la vista por error, aunque Delete通常 solo necesita ID *@
                    <input type="hidden" asp-for="Nombres" />
                    <input type="hidden" asp-for="Apellidos" />
                    
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="ListUsuarios" class="btn btn-outline-secondary px-4">
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash me-2"></i>Confirmar Eliminación
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
