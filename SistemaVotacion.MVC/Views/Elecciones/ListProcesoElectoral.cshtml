@model IEnumerable<SistemaVotacion.Modelos.ProcesoElectoral>

@{
    ViewData["Title"] = "ListProcesoElectoral";
}

<h1>Procesos Electorales</h1>

<p>
    <a asp-action="CreateProcesoElectoral" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.NombreProceso)</th>
            <th>@Html.DisplayNameFor(model => model.FechaInicio)</th>
            <th>@Html.DisplayNameFor(model => model.FechaFin)</th>
            <th>Tipo de Proceso</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.NombreProceso</td>
                <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@item.FechaFin.ToString("dd/MM/yyyy")</td>
                <td>@(item.TipoProceso != null ? item.TipoProceso.NombreTipoProceso : "No definido")</td>
                <td>
                    @Html.ActionLink("Editar", "EditProcesoElectoral", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" }) |
                    @Html.ActionLink("Detalles", "DetailsProcesoElectoral", new { id = item.Id }, new { @class = "btn btn-sm btn-info" }) |
                    @Html.ActionLink("Eliminar", "DeleteProcesoElectoral", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
